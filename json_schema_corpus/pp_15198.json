          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "entries": {
            "type": "array",
            "items": {
              "properties": {}
            }
          },
          "requires": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "ammunition": {
                  "type": "boolean"
                },
                "armor": {
                  "type": "boolean"
                },
                "axe": {
                  "type": "boolean"
                },
                "sword": {
                  "type": "boolean"
                },
                "weapon": {
                  "type": "boolean"
                },
                "dmgType": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                },
                "scfType": {
                  "type": "string"
