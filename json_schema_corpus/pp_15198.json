              "property": {
                "type": "string"
              }
            },
            "additionalProperties": false
          },
          "noDisplay": {
            "type": "boolean"
          },
          "charges": {
            "type": [
              "string",
              "integer"
            ]
          },
          "attachedSpells": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "ammo": {
            "type": "boolean"
