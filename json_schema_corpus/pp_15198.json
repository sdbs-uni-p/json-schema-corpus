              }
            },
            "required": [
              "rarity",
              "source",
              "page"
            ],
            "additionalProperties": false
          },
          "excludes": {
            "type": "object",
            "properties": {
              "name": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
