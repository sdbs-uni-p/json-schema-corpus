{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "Context",
  "type": "object",
  "required": [
    "scheme",
    "id",
    "type",
    "values"
  ],
  "properties": {
    "scheme": {
      "constant": "context-observer"
    },
    "id": {
      "type": "string"
    },
    "type": {
      "enum": [
        "chat",
        "audio",
        "video",
        "av",
        "screen",
        "file",
        "midi"
      ]
    },
    "description": {
      "type": "string"
    },
    "time": {
      "type": "string",
      "format": "date-time"
    },
    "unit": {
      "$ref": "#/ContextUnit"
    },
    "version": {
      "type": "integer"
    },
    "values": {
      "type": "array",
      "items": {
        "$ref": "#/ContextValue"
      }
    },
    "tag": {
      "type": "string"
    }
  },
  "ContextUnit": {
    "type": "object",
    "properties": {}
  },
  "ContextValue": {
    "type": "object",
    "required": [
      "name",
      "unit",
      "value",
      "sum"
    ],
    "anyOf": [
      {
        "$ref": "#/RawContextValue"
      },
      {
        "$ref": "#/ProcessedContextValue"
      }
    ],
    "properties": {
      "name": {
        "type": "string"
      },
      "unit": {
        "$ref": "#/ContextUnit"
      },
      "value": {
        "type": "object"
      },
      "sum": {
        "$ref": "#/ContextUnit"
      },
      "time": {
        "type": "string",
        "format": "date-time"
      },
      "updateTime": {
        "type": "string",
        "format": "date-time"
      },
      "expires": {
        "type": "string",
        "format": "date-time"
      },
      "address": {
        "type": "string"
      }
    }
  },
  "Contexts": {
    "type": "object",
    "stereotype": "children",
    "required": [
      "parent",
      "listener",
      "type"
    ],
    "properties": {
      "parent": {
        "constant": "context"
      },
      "listener": {
        "constant": "contexts"
      },
      "type": {
        "constant": "Context"
      }
    }
  },
  "Actions": {
    "type": "object",
    "stereotype": "children",
    "required": [
      "parent",
      "listener",
      "type"
    ],
    "properties": {
      "parent": {
        "constant": "context"
      },
      "listener": {
        "constant": "actions"
      },
      "type": {
        "constant": "Action"
      }
    }
  },
  "Action": {
    "type": "object",
    "stereotype": "syncobjectchild",
    "required": [
      "id",
      "type",
      "values"
    ],
    "properties": {
      "id": {
        "type": "string"
      },
      "type": {
        "enum": [
          "chat",
          "audio",
          "video",
          "av",
          "screen",
          "file",
          "midi"
        ]
      },
      "description": {
        "type": "string"
      },
      "time": {
        "type": "string",
        "format": "date-time"
      },
      "unit": {
        "$ref": "#/ContextUnit"
      },
      "version": {
        "type": "integer"
      },
      "values": {
        "type": "array",
        "items": {
          "$ref": "#/ContextValue"
        }
      },
      "tag": {
        "type": "string"
      }
    }
  },
  "RawContextValue": {
    "type": "object",
    "properties": {}
  },
  "ProcessedContextValue": {
    "type": "object",
    "properties": {}
  }
}