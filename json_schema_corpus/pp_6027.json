{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "user": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "username": {
          "type": "string",
          "format": "username"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "firstName": {
          "type": "string",
          "format": "firstName"
        },
        "lastName": {
          "type": "string"
        },
        "auth_providers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "authId": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "authId"
            ]
          }
        },
        "createdAt": {
          "type": "string",
          "format": "datePast"
        },
        "updatedAt": {
          "type": "string",
          "format": "datePast"
        }
      },
      "required": [
        "id",
        "username",
        "email",
        "firstName",
        "lastName",
        "auth_providers",
        "createdAt",
        "updatedAt"
      ]
    },
    "token": {
      "type": "string",
      "format": "jwtToken"
    }
  },
  "required": [
    "user",
    "token"
  ]
}