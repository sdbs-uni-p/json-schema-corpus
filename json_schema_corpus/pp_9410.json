{
  "name": "ax-artifact-repository-link-widget",
  "description": "The AxArtifactRepositoryLinkWidget displays a link to the repository of a dynamic widget.",
  "integration": {
    "technology": "angular",
    "type": "widget"
  },
  "compatibility": [
    "json-patch"
  ],
  "features": {
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
      "display": {
        "type": "object",
        "properties": {
          "resource": {
            "type": "string",
            "format": "topic",
            "axRole": "inlet",
            "description": "The topic of the resource with content of a bower.json."
          },
          "i18nHtmlText": {
            "type": [
              "string",
              "object"
            ],
            "description": "The (internationalized) HTML link text.",
            "default": "Browse artifact repository"
          }
        }
      }
    }
  }
}