{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "attack-pattern",
  "description": "Techniques used to execute a cyber attack",
  "type": "object",
  "allOf": [
    {
      "$ref": "ttp-base.json"
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "attack-pattern"
          ]
        },
        "capec_id": {
          "type": "string",
          "description": "CAPEC ID for this attack pattern"
        }
      }
    }
  ],
  "relationships": {
    "related": [
      "asset",
      "attack-pattern",
      "campaign",
      "configuration",
      "course-of-action",
      "identity",
      "incident",
      "indicator",
      "kill-chain",
      "kill-chain-phase",
      "malicious-infrastructure",
      "malicious-tool",
      "malware",
      "observation",
      "threat-actor",
      "tool",
      "victim-targeting",
      "vulnerability",
      "weakness"
    ],
    "kill-chain-phases": [
      "kill-chain-phase"
    ],
    "targets": [
      "exploit-target"
    ],
    "duplicate-of": [
      "attack-pattern"
    ],
    "suggested-update": [
      "attack-pattern"
    ],
    "derived-from": [
      "attack-pattern"
    ]
  }
}