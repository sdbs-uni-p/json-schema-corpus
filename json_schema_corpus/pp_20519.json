        "YAPT",
        "YEKT"
      ],
      "description": "Timezone abbreviation e.g. GMT, EST, PST.",
      "default": "GMT"
    },
    "event_logo": {
      "$ref": "image_archetype_schema.json",
      "description": "Image Archetype ID to use as the event logo of this event"
    },
    "description": {
      "type": "string",
      "description": "Description of the event",
      "maxLength": 5000,
      "default": ""
    },
    "admission_price": {
      "type": "integer",
      "description": "Admission price in cents as an integer (whole number)",
      "minimum": 0,
      "maximum": 999999999999999,
      "default": 0
    },
    "ticket_quantity": {
      "type": "integer",
      "description": "Amount of tickets available for the event",
      "minimum": 1,
      "maximum": 99999999999999,
      "default": 1
    },
    "category": {
      "type": "string",
      "description": "General category of the event, e.g. Music",
      "maxLength": 40,
      "default": ""
    },
    "organizer_name": {
      "type": "string",
      "description": "Name of the individual or company that organized the event",
      "maxLength": 140,
      "default": ""
    },
    "organizer_info": {
      "type": "string",
      "description": "URL to the organizer's website",
      "format": "uri",
      "maxLength": 1000,
      "default": ""
    },
    "recurring": {
      "type": "boolean",
      "description": "Does the event take places on multiple occasions?",
      "default": false
    },
    "recurrence_date_start": {
      "type": "array",
      "maxItems": 10,
      "uniqueItems": true,
      "default": [],
      "items": {
        "type": "string",
        "format": "date-time",
        "default": ""
      }
    },
    "recurrence_date_end": {
      "type": "array",
      "maxItems": 10,
      "uniqueItems": true,
      "default": [],
      "items": {
        "type": "string",
        "format": "date-time",
        "default": ""
      }
    },
    "tags": {
      "type": "array",
      "description": "Array of Tag Archetypes that are used to help categorize this Archetype record",
      "maxItems": 6,
      "uniqueItems": true,
      "additionalItems": false,
      "default": [],
      "items": {
        "$ref": "tag_archetype_schema.json"
      }
    }
  }
}