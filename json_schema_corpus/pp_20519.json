{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Event Schema",
  "description": "The Event Archetype - Essential properties that define an event",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "title, start_date"
  ],
  "properties": {
    "_id": {
      "type": "string",
      "description": "Unique identifier for this archetype record",
      "maxLength": 50,
      "default": ""
    },
    "draft": {
      "type": "boolean",
      "description": "Indicates this archetype record is a draft and is not published",
      "default": false
    },
    "created": {
      "type": "string",
      "description": "Date and time this archetype record was created in ISO 8601 date standard e.g. YYYY-MM-DDThh:mm:ss.sTZD",
      "format": "date-time",
      "default": ""
    },
    "updated": {
      "type": "string",
      "description": "Date and time this archetype record was updated in ISO 8601 date standard e.g. YYYY-MM-DDThh:mm:ss.sTZD",
      "format": "date-time",
      "default": ""
    },
    "title": {
      "type": "string",
      "description": "Title of the event",
      "maxLength": 140,
      "default": ""
    },
    "start_date": {
      "type": "string",
      "description": "Date and time event starts in ISO 8601 date standard e.g. YYYY-MM-DDThh:mm:ss.sTZD",
      "format": "date-time",
      "default": ""
    },
    "online": {
      "type": "boolean",
      "description": "Is the event online?",
      "default": false
    },
    "event_location": {
      "type": "string",
      "description": "Name of location event e.g. Tom's Sports Bar",
      "maxLength": 140,
      "default": ""
    },
    "event_address": {
      "type": "string",
      "description": "To add multiple address lines, use \n. For example, 1234 Gl\u00fccklichkeit Stra\u00dfe\nHinterhaus 5. Etage li.",
      "maxLength": 100,
      "default": ""
    },
    "event_city": {
      "type": "string",
      "maxLength": 100,
      "default": ""
    },
    "event_region": {
      "type": "string",
      "description": "The general region where the event takes place.  Can be a US state, or a province, for instance.",
      "maxLength": 100,
      "default": ""
    },
    "end_date": {
      "type": "string",
      "description": "Date and time event ends in ISO 8601 date standard e.g. YYYY-MM-DDThh:mm:ss.sTZD",
      "format": "date-time",
      "default": ""
    },
    "timezone": {
      "enum": [
        "ACDT",
        "ACST",
        "ADT",
        "AEDT",
        "AEST",
        "AFT",
        "AKDT",
        "AKST",
        "ALMT",
        "AMST",
        "AMT",
        "ANAST",
        "ANAT",
        "AQTT",
        "ART",
        "AST",
        "AWDT",
        "AWST",
        "AZOST",
        "AZOT",
        "AZST",
        "AZT",
        "BNT",
        "BOT",
        "BRT",
        "BST",
        "BTT",
        "CAST",
        "CAT",
        "CCT",
        "CDT",
        "CET",
        "CHAST",
        "CKT",
        "CLT",
        "COT",
        "CST",
        "CVT",
        "CXT",
        "ChST",
        "DAVT",
        "EAST",
        "EAT",
        "ECT",
        "EET",
        "EGT",
        "EST",
        "ET",
        "FJT",
        "FKT",
        "FNT",
        "GALT",
        "GAMT",
        "GET",
        "GFT",
        "GILT",
        "GMT",
        "GST",
        "GYT",
        "HAA",
        "HAC",
        "HAE",
        "HAP",
        "HAR",
        "HAST",
        "HAT",
        "HAY",
        "HKT",
        "HLV",
        "HNA",
        "HNC",
        "HNE",
        "HNP",
        "HNR",
        "HNT",
        "HNY",
        "HOVT",
        "ICT",
        "IOT",
        "IRKT",
        "IRST",
        "IST",
        "JST",
        "KGT",
        "KRAT",
        "KST",
        "KUYT",
        "LHST",
        "LINT",
        "MAGT",
        "MART",
        "MAWT",
        "MDT",
        "MESZ",
        "MEZ",
        "MHT",
        "MMT",
        "MSK",
        "MST",
        "MUT",
        "MVT",
        "MYT",
        "NCT",
        "NFT",
        "NOVT",
