{
  "$schema": "http://json-schema.org/schema#",
  "title": "OAuthClient",
  "type": "object",
  "properties": {
    "userId": {
      "type": "string",
      "pattern": "[0-9a-fA-F]+",
      "description": "MongoDB object ID for the user",
      "minLength": 12,
      "maxLength": 12
    },
    "grantType": {
      "type": "string"
    },
    "responseType": {
      "type": "string"
    },
    "scopes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "redirectUris": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "clientId": {
      "type": "string",
      "minLength": 30
    },
    "secret": {
      "type": "string",
      "minLength": 30
    }
  },
  "oneOf": [
    {
      "properties": {
        "grantType": {
          "enum": [
            "authorization_code"
          ]
        },
        "responseType": {
          "enum": [
            "code"
          ]
        }
      },
      "required": [
        "grantType",
        "responseType"
      ]
    },
    {
      "properties": {
        "grantType": {
          "enum": [
            "client_credentials"
          ]
        },
        "responseType": {
          "enum": [
            "token"
          ]
        }
      },
      "required": [
        "grantType",
        "responseType"
      ]
    }
  ],
  "additionalProperties": false
}