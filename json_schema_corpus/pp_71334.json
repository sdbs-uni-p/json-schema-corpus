{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "doc/spec/exception.json",
  "title": "TestSchema",
  "type": "object",
  "properties": {
    "app": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Immutable name of the app emitting this transaction",
          "type": "string"
        },
        "version": {
          "description": "Version of the app emitting this transaction",
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "errors": {
      "type": "array",
      "items": {
        "$ref": "error.json"
      },
      "minItems": 1
    }
  },
  "required": [
    "app"
  ]
}