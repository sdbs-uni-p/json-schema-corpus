          "type": "integer"
        },
        "owners": {
          "items": [
            {
              "type": "integer"
            }
          ],
          "name": "owners",
          "type": "array"
        },
        "pid": {
          "name": "pid",
          "properties": {
            "revision_id": {
              "type": "integer"
