{
  "$schema": "http://json-schema.org/draft-03/schema#",
  "type": "object",
  "required": true,
  "properties": {
    "name": {
      "type": "string"
    },
    "location": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "question": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "question": {
                  "type": "string",
                  "required": true
                },
                "correct_answer": {
                  "type": "integer",
                  "required": true
                },
                "answer": {
                  "type": "array",
                  "minItems": 3,
                  "maxItems": 3,
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}