{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://fiware.github.io/data-models/specs/Alert/schema.json",
  "title": "Alert data model JSON Schema",
  "description": "An alert generated by a user or device in a given location",
  "allOf": [
    {
      "$ref": "https://fiware.github.io/data-models/common-schema.json#/definitions/GSMA-Commons"
    },
    {
      "$ref": "https://fiware.github.io/data-models/common-schema.json#/definitions/Location-Commons"
    },
    {
      "$ref": "https://fiware.github.io/data-models/specs/Alert/alert-schema.json#/definitions/Common-Alert"
    },
    {
      "type": "object",
      "properties": {
        "subCategory": {
          "type": "string",
          "anyOf": [
            {
              "enum": [
                "trafficJam",
                "carAccident",
                "carWrongDirection",
                "carStopped",
                "pothole",
                "roadClosed",
                "roadWorks",
                "hazardOnRoad",
                "injuredBiker",
                "flood",
                "tsunami",
                "coastalEvent",
                "earthquake",
                "rainfall",
                "highTemperature",
                "lowTemperature",
                "heatWave",
                "coldWave",
                "ice",
                "snow",
                "wind",
                "fog",
                "tornado",
                "tropicalCyclone",
                "hurricane",
                "snow/ice",
                "thunderstorms",
                "fireRisk",
                "avalancheRisk",
                "floodRisk",
                "airPollution",
                "waterPollution",
                "pollenConcentration",
                "asthmaAttack",
                "bumpedPatient",
                "fallenPatient",
                "heartAttack",
                "suspiciousAction",
                "robbery",
                "assault",
                "civilDisorder",
                "buildingFire",
                "forestFire",
                "noxiousWeed",
                "snail",
                "insect",
                "rodent",
                "bacteria",
                "microbe",
                "fungus",
                "mite",
                "virus",
                "nematodes",
                "irrigation",
                "fertilisation"
              ]
            },
            {
              "$ref": "https://fiware.github.io/data-models/specs/Weather/weather-schema.json#/definitions/WeatherAlertCategories"
            }
          ]
        }
      }
    }
  ],
  "oneOf": [
    {
      "required": [
        "id",
        "type",
        "location",
        "alertSource",
        "category",
        "dateIssued"
      ]
    },
    {
      "required": [
        "id",
        "type",
        "address",
        "alertSource",
        "category",
        "dateIssued"
      ]
    }
  ]
}