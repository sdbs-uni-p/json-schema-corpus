{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "course-of-action",
  "description": "Defensive actions taken in response to threats",
  "type": "object",
  "allOf": [
    {
      "$ref": "../common/core.json"
    },
    {
      "$ref": "../common/describable.json"
    },
    {
      "$ref": "../common/referenceable.json"
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "course-of-action"
          ]
        },
        "stage": {
          "type": "string",
          "enum": [
            "Remedy",
            "Response"
          ],
          "description": "Whether this course of action is a preemptive remedy or a response action."
        },
        "kind": {
          "type": "string",
          "enum": [
            "Perimeter Blocking",
            "Internal Blocking",
            "Redirection",
            "Redirection (Honey Pot)",
            "Hardening",
            "Patching",
            "Eradication",
            "Rebuilding",
            "Training",
            "Monitoring",
            "Physical Access Restrictions",
            "Logical Access Restrictions",
            "Public Disclosure",
            "Diplomatic Actions",
            "Policy Actions",
            "Other"
          ],
          "description": "The type of course of action this describes, such as a policy change, monitoring, or redirection."
        },
        "objective": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string",
              "description": "A textual description for this COA objective"
            },
            "applicability_confidence": {
              "type": "integer",
              "minimum": 0,
              "maximum": 6,
              "description": "The likelihood that carrying out the COA will achieve this objective, using the Admirality scale"
            }
          }
        },
        "structured_coa": {
          "type": "object",
          "description": "A structured representation for how this course of action can be achieved. For example, a Snort blocking rule."
        },
        "impact": {
          "type": "object",
          "description": "The impact that implementing this COA would have on system operations",
          "allOf": [
            {
              "$ref": "../common/statement.json"
            },
            {
              "properties": {
                "value": {
                  "enum": [
                    "high",
                    "medium",
                    "low"
                  ]
                }
              }
            }
          ]
        },
        "cost": {
          "type": "object",
          "description": "The cost of implementing this COA (monetary, operational, or other)",
          "allOf": [
            {
              "$ref": "../common/statement.json"
            },
            {
              "properties": {
                "value": {
                  "enum": [
                    "high",
                    "medium",
                    "low"
                  ]
                }
              }
            }
          ]
        }
      }
    }
  ],
  "relationships": {
    "related": [
      "asset",
      "attack-pattern",
      "campaign",
      "configuration",
      "course-of-action",
      "identity",
      "incident",
      "indicator",
      "kill-chain",
      "kill-chain-phase",
      "malicious-infrastructure",
      "malicious-tool",
      "malware",
      "observation",
      "threat-actor",
      "tool",
      "victim-targeting",
      "vulnerability",
      "weakness"
    ],
    "duplicate-of": [
      "course-of-action"
    ],
    "suggested-update": [
      "course-of-action"
    ],
    "derived-from": [
      "course-of-action"
    ]
  },
  "required": [
    "stage",
    "type",
    "objective"
  ]
}