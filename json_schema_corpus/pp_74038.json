          ]
        },
        "measurements": {
          "$ref": "#/definitions/measurements"
        },
        "tags": {
          "$ref": "#/definitions/tags"
        },
        "info": {
          "$ref": "common.json#/definitions/info"
        },
        "origin": {
          "$ref": "#/definitions/file-origin"
        },
        "hash": {
          "$ref": "#/definitions/hash"
        },
        "created": {
          "$ref": "created-modified.json#/definitions/created"
