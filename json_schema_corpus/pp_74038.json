{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "name": {
      "type": "string"
    },
    "file-type": {
      "type": "string"
    },
    "mimetype": {
      "type": "string"
    },
    "modality": {
      "type": "string"
    },
    "measurements": {
      "items": {
        "type": "string"
      },
      "type": "array",
      "uniqueItems": true
    },
    "tags": {
      "items": {
        "type": "string"
      },
      "type": "array",
      "uniqueItems": true
    },
    "via": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "method": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "file-origin": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "method": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "via": {
          "$ref": "#/definitions/via"
        }
