{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "id": "https://inowas.com/schema/",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_\\-]{3,255}$"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "geometry": {
      "$ref": "geojson/geometry.json"
    },
    "type": {
      "type": "string",
      "minLength": 3,
      "maxLength": 3
    },
    "affected_layers": {
      "$ref": "modflow/affectedLayers.json"
    }
  },
  "required": [
    "id",
    "name",
    "geometry",
    "type",
    "metadata",
    "affected_layers"
  ]
}