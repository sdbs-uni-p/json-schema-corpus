{
  "$schema": "http://json-schema.org/schema#",
  "description": "The schema is made for RenderTheFuck stack diagram.",
  "type": "object",
  "required": [
    "wtf",
    "settings",
    "layers"
  ],
  "properties": {
    "wtf": {
      "type": "string",
      "enum": [
        "stack"
      ]
    },
    "settings": {
      "type": "object",
      "required": [
        "title"
      ],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "layers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "items"
        ],
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name"
              ],
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 1
                },
                "parent": {
                  "type": "number"
                }
              }
            }
          }
        }
      }
    }
  }
}