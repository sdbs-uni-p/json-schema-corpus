{
  "id": "file://article.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_schema": {
      "type": "string",
      "pattern": "^pbj:([a-z0-9-]+):([a-z0-9\\.-]+):([a-z0-9-]+)?:([a-z0-9-]+):([0-9]+-[0-9]+-[0-9]+)$",
      "default": "pbj:acme:blog:entity:article:1-0-0"
    },
    "_id": {
      "type": "string",
      "pattern": "^[\\w\\.-_]+$",
      "pbj": {
        "type": "identifier",
        "rule": "single",
        "overridable": true
      }
    },
    "title": {
      "type": "string",
      "minLength": 0,
      "maxLength": 255,
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "thumbnails": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z_]{1}[a-zA-Z0-9_]{1,99}$": {
          "type": "string",
          "pattern": "^(https?:\\/\\/)?([\\da-z\\.-]+)\\.([a-z\\.]{2,6})([\\/\\w \\.-]*)*\\/?$",
          "faker": "internet.url"
        }
      },
      "maxProperties": 1,
      "minProperties": 1,
      "additionalProperties": false,
      "pbj": {
        "type": "string",
        "rule": "map",
        "format": "url"
      }
    },
    "comments": {
      "type": "array",
      "items": [
        {
          "$ref": "#/definitions/comment"
        }
      ],
      "additionalProperties": false,
      "pbj": {
        "type": "message",
        "rule": "list"
      }
    },
    "latest_comment": {
      "type": "object",
      "anyOf": [
        {
          "$ref": "#/definitions/comment"
        }
      ],
      "pbj": {
        "type": "message",
        "rule": "single"
      }
    }
  },
  "required": [
    "_schema",
    "_id",
    "created_at"
  ],
  "definitions": {
    "comment": {
      "type": "object",
      "anyOf": [
        {
          "$ref": "file://comment.json#"
        }
      ]
    }
  },
  "additionalProperties": false
}