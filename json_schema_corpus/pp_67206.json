{
  "$schema": "http://json-schema.org/schema#",
  "id": "http://comrade.forma-pro.com/schemas/trigger/CronTrigger.json",
  "allOf": [
    {
      "$ref": "Trigger.json"
    },
    {
      "type": "object",
      "properties": {
        "schema": {
          "type": "string",
          "enum": [
            "http://comrade.forma-pro.com/schemas/trigger/CronTrigger.json"
          ]
        },
        "startAt": {
          "$ref": "../date.json"
        },
        "expression": {
          "type": "string",
          "pattern": "^(\\S*? )?\\S*? \\S*? \\S*? \\S*? \\S*?$"
        },
        "misfireInstruction": {
          "type": "string",
          "enum": [
            "fire_once_now",
            "do_nothing",
            "smart_policy",
            "ignore_misfire_policy"
          ]
        }
      },
      "required": [
        "expression",
        "schema",
        "misfireInstruction"
      ]
    }
  ]
}