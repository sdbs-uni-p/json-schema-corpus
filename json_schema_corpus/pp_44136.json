{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "json-report",
  "type": "object",
  "properties": {
    "duplicates": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "lines": {
            "type": "integer"
          },
          "tokens": {
            "type": "integer"
          },
          "firstFile": {
            "$ref": "#/definitions/file"
          },
          "secondFile": {
            "$ref": "#/definitions/file"
          },
          "fragment": {
            "type": "string"
          }
        },
        "required": [
          "lines",
          "tokens",
          "firstFile",
          "secondFile",
          "fragment"
        ]
      }
    },
    "statistics": {
      "type": "object",
      "properties": {
        "clones": {
          "type": "integer"
        },
        "duplications": {
          "type": "integer"
        },
        "files": {
          "type": "integer"
        },
        "percentage": {
          "type": "string"
        },
        "lines": {
          "type": "integer"
        }
      }
    },
    "required": [
      "clones",
      "duplications",
      "files",
      "percentage",
      "lines"
    ]
  },
  "required": [
    "duplicates",
    "statistics"
  ],
  "definitions": {
    "file": {
      "type": "object",
      "properties": {
        "start": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "start",
        "name"
      ]
    }
  }
}