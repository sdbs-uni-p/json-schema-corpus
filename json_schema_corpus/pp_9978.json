{
  "$schema": "http://json-schema.org/draft-04/hyper-schema#",
  "title": "Gastos Abertos' API",
  "id": "http://gastosabertos.org/schema#",
  "description": "Revenue list",
  "type": "array",
  "items": {
    "$ref": "#/definitions/revenue-line"
  },
  "definitions": {
    "code": {
      "description": "Revenue code",
      "type": "string",
      "pattern": "^(9.)?([1-9].){4}[0-9]{1,2}.[0-9]{1,2}$",
      "example": "1.2.3.4.75.0"
    },
    "date": {
      "description": "Date (???)",
      "type": "string",
      "format": "date-time",
      "example": "2010-08-02"
    },
    "description": {
      "description": "Description of the revenue",
      "type": "string"
    },
    "id": {
      "description": "ID of the revenue",
      "type": "integer"
    },
    "monthly_outcome": {
      "description": "Revenue in a month",
      "type": "number"
    },
    "monthly_predicted": {
      "description": "Revenue predicted for a month",
      "type": "number"
    },
    "revenue-line": {
      "description": "Revenue line",
      "type": "object",
      "properties": {
        "code": {
          "$ref": "#/definitions/code"
        },
        "date": {
          "$ref": "#/definitions/date"
        },
        "description": {
          "$ref": "#/definitions/description"
        },
        "id": {
          "$ref": "#/definitions/id"
        },
        "monthly_outcome": {
          "$ref": "#/definitions/monthly_outcome"
        },
        "monthly_predicted": {
          "$ref": "#/definitions/monthly_predicted"
        }
      }
    }
  },
  "links": [
    {
      "title": "Revenue List",
      "description": "Lists revenue lines.",
      "rel": "list",
      "href": "/api/v1/receita/list",
      "method": "GET",
      "schema": {
        "type": "object",
        "properties": {
          "years": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "minItems": 1,
            "maxItems": 2
          },
          "page": {
            "type": "integer",
            "minimum": 0,
            "default": 0
          },
          "per_page_num": {
            "type": "integer",
            "minimum": 1,
            "default": 100
          }
        },
        "required": [
          "years"
        ]
      }
    }
  ]
}