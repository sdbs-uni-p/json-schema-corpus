{
  "id": "https://raw.githubusercontent.com/eviratec/schema/master/v1/contact/person.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "schema for a contact person",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "email"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "phone": {
      "type": "string"
    }
  }
}