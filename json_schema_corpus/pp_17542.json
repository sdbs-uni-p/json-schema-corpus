{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "RootDiscussionForm",
  "description": "RootDiscussionForm from Tiamat",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "title",
    "forumBoard",
    "content",
    "isRoot",
    "forumBoardGroup"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 4,
      "maxLength": 30
    },
    "forumBoardGroup": {
      "type": "string"
    },
    "forumBoard": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{24}$"
    },
    "isRoot": {
      "const": true
    },
    "content": {
      "$ref": "slate.json#/definitions/value"
    }
  }
}