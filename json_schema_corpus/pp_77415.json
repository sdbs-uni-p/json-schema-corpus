{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Error",
  "type": "object",
  "required": [
    "statusCode",
    "message"
  ],
  "properties": {
    "statusCode": {
      "type": "number",
      "description": "The same HTTP status code used in the response"
    },
    "message": {
      "type": "string",
      "description": "Human-readable message"
    },
    "errors": {
      "type": "array",
      "items": {
        "title": "Error",
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "string",
            "description": "Specific error code"
          },
          "message": {
            "type": "string",
            "description": "Human-readable message"
          }
        }
      }
    }
  }
}