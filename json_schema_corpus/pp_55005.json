{
  "$schema": "http://json-schema.org/draft-03/schema",
  "title": "Recipe",
  "description": "Recipe Package JSON Schema",
  "type": "object",
  "required": false,
  "properties": {
    "do_clean": {
      "type": "object",
      "required": false,
      "properties": {
        "command": {
          "description": "Command for clean objects from building",
          "type": "string",
          "required": false
        }
      }
    },
    "do_compile": {
      "type": "object",
      "required": false,
      "properties": {
        "commands": {
          "description": "List of commands for compiling source code",
          "type": "array",
          "required": false,
          "items": {
            "type": "string",
            "required": false
          }
        }
      }
    },
    "do_dependencies": {
      "type": "object",
      "required": false,
      "properties": {
        "packages": {
          "description": "List of packages for build dependencies",
          "type": "array",
          "required": false,
          "items": {
            "type": "string",
            "required": false
          }
        }
      }
    },
    "do_download": {
      "type": "object",
      "required": true,
      "properties": {
        "src_md5sum": {
          "description": "MD5sum for the source code downloaded",
          "type": "string",
          "required": false
        },
        "src_uri": {
          "description": "URI for download the source code",
          "type": "string",
          "required": false
        }
      }
    },
    "do_fetch": {
      "type": "object",
      "required": true,
      "properties": {
        "download_cmd": {
          "description": "Base command for download source code [wget, git, svn]",
          "type": "string",
          "required": false
        }
      }
    },
    "do_info": {
      "type": "object",
      "required": true,
      "properties": {
        "description": {
          "description": "Description of recipe",
          "type": "string",
          "required": false
        },
        "filename": {
          "description": "Full filename of recipe",
          "type": "string",
          "required": false
        },
        "homepage": {
          "description": "Home site for the tool",
          "type": "string",
          "required": false
        },
        "license": {
          "description": "License type for the tool",
          "type": "string",
          "required": false
        }
      }
    },
    "do_install": {
      "type": "object",
      "required": false,
      "properties": {
        "commands": {
          "description": "Install command for the build source",
          "type": "string",
          "required": false
        },
        "destination": {
          "description": "Destination of install [native, stage]",
          "type": "string",
          "required": false
        }
      }
    },
    "do_package": {
      "type": "object",
      "required": false,
      "properties": {
        "commands": {
          "description": "List of RPM/DEB build package commands",
          "type": "array",
          "required": false,
          "items": {
            "type": "string",
            "required": false
          }
        }
      }
    }
  }
}