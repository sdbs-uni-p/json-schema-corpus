{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Minimize size plugin manifest",
  "type": "object",
  "properties": {
    "plugins": {
      "type": "object",
      "properties": {
        "minimize_size": {
          "type": "object",
          "properties": {
            "shrink": {
              "type": "boolean"
            },
            "zerofree": {
              "$ref": "#/definitions/absolute_path"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "absolute_path": {
      "type": "string",
      "pattern": "^/[^\\0]+$"
    }
  }
}