{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://datatypes.io/schema/article.json",
  "title": "Article",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "title": {
      "type": "string"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "inaccurate",
          "incomplete",
          "proprietary",
          "not-a-number"
        ]
      }
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "visible": {
      "type": "boolean"
    },
    "related": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "furtherReading": {
      "type": "object",
      "additionalProperties": {
        "type": "string",
        "format": "uri"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "title",
    "visible"
  ]
}