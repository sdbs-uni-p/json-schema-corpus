{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://fiware.github.io/data-models/specs/UrbanMobility/GtfsRoute/schema.json",
  "title": "NGSI GTFS Schema - Route",
  "description": "GTFS Route",
  "type": "object",
  "allOf": [
    {
      "anyOf": [
        {
          "required": [
            "name"
          ]
        },
        {
          "required": [
            "shortName"
          ]
        }
      ]
    },
    {
      "required": [
        "id",
        "type",
        "routeType",
        "operatedBy"
      ]
    },
    {
      "$ref": "https://fiware.github.io/data-models/common-schema.json#/definitions/GSMA-Commons"
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "GtfsRoute"
          ],
          "description": "NGSI Entity type"
        },
        "name": {
          "type": "string"
        },
        "page": {
          "type": "string"
        },
        "routeColor": {
          "type": "string"
        },
        "routeTextColor": {
          "type": "string"
        },
        "routeType": {
          "type": "string",
          "enum": [
            "0",
            "1",
            "2",
            "3",
            "4",
            "5",
            "6",
            "7"
          ]
        },
        "routeSortOrder": {
          "type": "integer",
          "minimum": 0
        },
        "operatedBy": {
          "type": "string",
          "format": "uri"
        },
        "shortName": {
          "type": "string"
        }
      }
    }
  ]
}