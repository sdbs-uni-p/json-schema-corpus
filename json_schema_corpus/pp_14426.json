{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "StatusControlRequest Schema",
  "type": "object",
  "required": [
    "StatusControlRequest"
  ],
  "properties": {
    "_id": {
      "type": "object",
      "$ref": "#/identifier"
    },
    "StatusControlRequest": {
      "type": "object",
      "$ref": "#/data"
    }
  },
  "additionalProperties": false,
  "identifier": {
    "title": "id",
    "description": "StatusContol identifier",
    "type": "object",
    "properties": {
      "$oid": {
        "type": "string"
      }
    }
  },
  "data": {
    "title": "data",
    "description": "StatusContol Info",
    "type": "object",
    "required": [
      "timestamp",
      "targetKpInstance",
      "sourceKpInstance",
      "request"
    ],
    "properties": {
      "timestamp": {
        "type": "object",
        "required": [
          "$date"
        ],
        "properties": {
          "$date": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "targetKpInstance": {
        "type": "string"
      },
      "sourceKpInstance": {
        "type": "string"
      },
      "request": {
        "$ref": "#/reqObj"
      }
    },
    "additionalProperties": false
  },
  "reqObj": {
    "title": "request",
    "description": "request data",
    "type": "array",
    "items": {
      "title": "array for request",
      "type": "object",
      "required": [
        "key",
        "value"
      ],
      "properties": {
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "minItems": 1
  }
}