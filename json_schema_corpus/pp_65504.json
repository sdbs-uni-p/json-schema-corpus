{
  "type": "object",
  "title": "hunting",
  "$schema": "http://json-schema.org/draft-04/schema",
  "properties": {
    "agency": {
      "type": "string"
    },
    "date_effective": {
      "type": "string",
      "format": "date-time"
    },
    "date_expires": {
      "type": "string",
      "format": "date-time"
    },
    "documentation": {
      "type": "string",
      "format": "uri"
    },
    "schema_version": {
      "type": "string"
    },
    "conformsTo": {
      "type": "string",
      "format": "uri"
    },
    "state": {
      "type": "string",
      "minLength": 2,
      "maxLength": 2,
      "pattern": "([A-Z]{2})"
    },
    "seasons": {
      "type": "object",
      "properties": {
        "season": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "comment": {
              "type": "string"
            },
            "method_rules": {
              "type": [
                "string",
                "array"
              ],
              "items": {
                "type": "string"
              },
              "required": [
                "items"
              ]
            },
            "method": {
              "type": [
                "string",
                "array"
              ]
            },
            "range": {
              "type": "array",
              "properties": {
                "1": {
                  "type": "object",
                  "properties": {
                    "places": {
                      "type": "object"
                    },
                    "season": {
                      "type": "object",
                      "properties": {
                        "date": {
                          "type": "object",
                          "properties": {
                            "ends": {
                              "type": "string"
                            },
                            "starts": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "required": [
            "method"
          ]
        }
      },
      "required": [
        "season"
      ]
    },
    "species": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "bova_id": {
          "type": "string"
        },
        "taxonomy": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "aliases": {
          "type": "array"
        },
        "members": {
          "type": "array",
          "properties": {
            "name": {
              "type": "string"
            },
            "bova_id": {
              "type": "string"
            },
            "taxonomy": {
              "type": "string"
            },
            "url": {
              "type": "string",
              "format": "uri"
            },
            "aliases": {
              "type": "array"
            }
          },
          "required": [
            "name"
          ]
        }
      },
      "required": [
        "name"
      ]
    }
  },
  "required": [
    "agency",
    "date_effective",
    "date_expires",
    "documentation",
    "schema_version",
    "conformsTo",
    "state",
    "seasons"
  ]
}