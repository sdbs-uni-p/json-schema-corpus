{
  "type": "object",
  "title": "User schema",
  "$schema": "http://json-schema.org/draft-04/schema",
  "_auth_fields": [
    "username",
    "first_name",
    "last_name",
    "stories"
  ],
  "_public_fields": [
    "username"
  ],
  "_hidden_fields": [
    "password"
  ],
  "_nested_relationships": [
    "profile"
  ],
  "_auth_model": true,
  "required": [
    "username",
    "email",
    "password"
  ],
  "properties": {
    "created_at": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time",
      "_db_settings": {
        "type": "datetime",
        "default": "{{datetime.datetime.utcnow}}"
      }
    },
    "updated_at": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time",
      "_db_settings": {
        "type": "datetime",
        "onupdate": "{{datetime.datetime.utcnow}}"
      }
    },
    "profile": {
      "type": [
        "integer",
        "string"
      ],
      "_db_settings": {
        "type": "relationship",
        "document": "Profile",
        "backref_name": "user",
        "uselist": false
      }
    },
    "stories": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "integer"
          }
        ]
      },
      "_db_settings": {
        "type": "relationship",
        "document": "Story",
        "ondelete": "NULLIFY",
        "backref_name": "owner",
        "backref_ondelete": "NULLIFY",
        "foreign_keys": "Story.owner_id"
      }
    },
    "assigned_stories": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "integer"
          }
        ]
      },
      "_db_settings": {
        "type": "relationship",
        "document": "Story",
        "ondelete": "NULLIFY",
        "backref_name": "assignee",
        "backref_ondelete": "NULLIFY",
        "foreign_keys": "Story.assignee_id"
      }
    },
    "username": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "_db_settings": {
        "type": "string",
        "required": true,
        "min_length": 1,
        "max_length": 50,
        "unique": true,
        "primary_key": true
      },
      "_processors": [
        "lowercase"
      ]
    },
    "email": {
      "type": "string",
      "format": "email",
      "_db_settings": {
        "type": "string",
        "required": true,
        "unique": true
      },
      "_processors": [
        "lowercase"
      ]
    },
    "password": {
      "type": "string",
      "minLength": 3,
      "_db_settings": {
        "type": "string",
        "required": true,
        "min_length": 3
      },
      "_processors": [
        "encrypt"
      ]
    },
    "first_name": {
      "type": [
        "string",
        "null"
      ],
      "maxLength": 50,
      "default": "",
      "_db_settings": {
        "type": "string",
        "max_length": 50,
        "default": ""
      }
    },
    "last_name": {
      "type": [
        "string",
        "null"
      ],
      "maxLength": 50,
      "default": "",
      "_db_settings": {
        "type": "string",
        "max_length": 50,
        "default": ""
      }
    },
    "last_login": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time",
      "_db_settings": {
        "type": "datetime"
      }
    },
    "groups": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "admin",
          "user"
        ]
      },
      "default": [
        "user"
      ],
      "_db_settings": {
        "type": "list",
        "choices": [
          "admin",
          "user"
        ],
        "default": [
          "user"
        ],
        "item_type": "string"
      }
    },
    "status": {
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "active",
        "inactive",
        "blocked"
      ],
      "default": "active",
      "_db_settings": {
        "type": "choice",
        "choices": [
          "active",
          "inactive",
          "blocked"
        ],
        "default": "active"
      }
    },
    "settings": {
      "type": [
        "object",
        "null"
      ],
      "_db_settings": {
        "type": "dict"
      }
    }
  }
}