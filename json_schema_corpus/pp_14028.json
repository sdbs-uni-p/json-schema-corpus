{
  "type": "object",
  "title": "Track schema",
  "$schema": "http://json-schema.org/draft-03/schema",
  "properties": {
    "id": {
      "required": true,
      "type": "id_field",
      "args": {
        "primary_key": true
      }
    },
    "name": {
      "required": true,
      "type": "string"
    },
    "description": {
      "required": false,
      "type": "text"
    },
    "artist_id": {
      "required": false,
      "type": "foreign_key",
      "args": {
        "ref_document": "Artist",
        "ref_column": "artist.id",
        "ref_column_type": "id_field"
      }
    },
    "events": {
      "required": false,
      "type": "relationship",
      "args": {
        "document": "Event",
        "ondelete": "NULLIFY",
        "backref_name": "track",
        "backref_ondelete": "NULLIFY"
      }
    }
  }
}