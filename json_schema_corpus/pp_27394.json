{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "collection",
  "description": "Detailed collection representation",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "images": {
      "type": "array",
      "items": {
        "$ref": "image.json"
      }
    }
  },
  "required": [
    "name"
  ],
  "additionalProperties": false
}