{
  "type": "object",
  "$schema": "http://json-schema.org/draft-03/schema",
  "required": false,
  "properties": {
    "Defaults": {
      "type": "object",
      "required": true,
      "properties": {
        "Emulator": {
          "type": "string",
          "required": true
        },
        "Identifier": {
          "type": "string",
          "required": true
        },
        "Scraper": {
          "type": "string",
          "required": true
        }
      }
    },
    "FileExtensions": {
      "type": "array",
      "required": true,
      "items": {
        "type": "string",
        "required": true
      }
    },
    "Images": {
      "type": "object",
      "required": true,
      "properties": {
        "img_platform_logo": {
          "type": "string",
          "required": false
        },
        "img_platform_productshot": {
          "type": "string",
          "required": false
        }
      }
    },
    "Metadata": {
      "type": "object",
      "required": true,
      "properties": {
        "platform_company": {
          "type": "string",
          "required": false
        },
        "platform_releasedate": {
          "type": "string",
          "required": false
        },
        "platform_shortname": {
          "type": "string",
          "required": false
        }
      }
    },
    "Name": {
      "type": "string",
      "required": true
    },
    "PlatformId": {
      "type": "string",
      "required": true
    }
  }
}