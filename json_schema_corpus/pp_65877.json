  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "schema for an action",
  "additionalProperties": true,
  "required": [
    "uuid",
    "entity",
    "type",
    "class"
  ],
  "type": "object",
  "properties": {
    "uuid": {
      "type": "string"
    },
    "entity": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "class": {
      "type": "string"
    },
    "event_uuid": {
      "type": "string"
    },
    "option": {
      "type": "object"
    }
  }
}