{
  "$schema": "http://json-schema.org/schema#",
  "id": "http://comrade.forma-pro.com/schemas/Job.json",
  "allOf": [
    {
      "$ref": "JobTemplate.json"
    },
    {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "uuid4.json"
        },
        "results": {
          "type": "array",
          "items": {
            "$ref": "JobResult.json"
          }
        },
        "currentResult": {
          "$ref": "JobResult.json"
        },
        "processId": {
          "$ref": "uuid4.json"
        }
      }
    }
  ],
  "required": [
    "id",
    "processId",
    "currentResult"
  ]
}