{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Email resource",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "email",
    "mail_template_code"
  ],
  "properties": {
    "email": {
      "type": "string",
      "format": "email"
    },
    "mail_template_code": {
      "type": "string"
    },
    "params": {
      "type": "object"
    },
    "context": {
      "type": "string"
    },
    "attachments": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/attachment"
      }
    },
    "schedule_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "definitions": {
    "attachment": {
      "type": "object",
      "required": [
        "file"
      ],
      "additionalProperties": false,
      "properties": {
        "file": {
          "type": "string"
        },
        "content": {
          "type": "string"
        }
      }
    }
  }
}