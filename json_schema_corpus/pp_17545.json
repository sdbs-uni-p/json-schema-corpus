{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "SignUpForm",
  "description": "SignUpForm from Tiamat",
  "type": "object",
  "$async": true,
  "properties": {
    "email": {
      "type": "string",
      "format": "email",
      "minLength": 4,
      "maxLength": 30,
      "emailExists": false
    },
    "password": {
      "type": "string",
      "minLegth": 4,
      "maxLength": 50
    },
    "confirmPassword": {
      "const": {
        "$data": "1/password"
      }
    }
  },
  "required": [
    "email",
    "password",
    "confirmPassword"
  ]
}