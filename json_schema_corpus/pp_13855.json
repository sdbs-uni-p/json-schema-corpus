{
  "$schema": "http://json-schema.org/schema#",
  "id": "controlbar.json",
  "type": "object",
  "allOf": [
    {
      "$ref": "widget.json"
    },
    {
      "anyOf": [
        {
          "controls": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "states": {
                  "$ref": "widget.json#/definitions/states_type"
                }
              }
            }
          },
          "orientation": {
            "$ref": "orientedlayout.json#/definitions/orientation"
          },
          "padding": {
            "type": "number"
          }
        }
      ]
    }
  ]
}