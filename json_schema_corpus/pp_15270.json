{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "resource_id": {
    "$ref": "common.json#/app_id"
  },
  "resource": {
    "type": "object",
    "properties": {
      "count": {
        "type": "integer",
        "minimum": 0,
        "maximum": 1000
      },
      "required": [
        "count"
      ],
      "additionalProperties": false
    }
  },
  "verbs": {
    "create": {
      "required": [
        "count"
      ]
    },
    "update": {
      "required": [
        "count"
      ]
    }
  }
}