{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "resource_id": {
    "type": "string",
    "maxLength": 128,
    "pattern": "^[a-z0-9_\\-]+(\\.[\\w\\-]+)*$"
  },
  "resource": {
    "type": "object",
    "additionalProperties": true,
    "properties": {
      "cells": {
        "type": "array",
        "items": {
          "$ref": "common.json#/cell"
        }
      },
      "pattern": {
        "type": "string"
      },
      "endpoint": {
        "$ref": "common.json#/endpoint"
      },
      "environment": {
        "type": "string",
        "pattern": "^dev$|^prod$"
      },
      "lbenv": {
        "type": "string",
        "pattern": "^qa$|^prod$"
      },
      "port": {
        "$ref": "common.json#/port"
      }
    }
  },
  "options": {
    "type": "object",
    "properties": {
      "conn_timeout": {
        "type": "integer",
        "minimum": 0
      },
      "lb_method": {
        "type": "string"
      },
      "min_active": {
        "type": "integer",
        "minimum": 0
      },
      "persist_type": {
        "type": "string"
      },
      "persist_timeout": {
        "type": "integer",
        "minimum": 0
      },
      "svc_down_action": {
        "type": "string"
      }
    },
    "required": [],
    "additionalProperties": true
  },
  "verbs": {
    "create": {
      "required": [
        "endpoint",
        "pattern",
        "lbenv"
      ]
    },
    "update": {
      "required": [
        "lbenv"
      ]
    },
    "delete": {
      "required": [
        "lbenv"
      ]
    }
  }
}