{
  "name": "search-box-widget",
  "description": "Simple Box for entering search words.",
  "integration": {
    "technology": "angular",
    "type": "widget"
  },
  "styleSource": "scss/search-box-widget.scss",
  "features": {
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [
      "search"
    ],
    "properties": {
      "search": {
        "type": "object",
        "required": [
          "resource"
        ],
        "properties": {
          "resource": {
            "type": "string",
            "format": "topic",
            "axRole": "outlet"
          }
        }
      },
      "i18n": {
        "type": "object",
        "properties": {
          "locale": {
            "type": "string",
            "format": "topic",
            "axRole": "inlet",
            "default": "default"
          }
        }
      }
    }
  }
}