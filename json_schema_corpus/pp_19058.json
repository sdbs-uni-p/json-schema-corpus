{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "verticalDatum.json#",
  "type": "object",
  "title": "verticalDatum",
  "description": "The reference frame or system from which vertical distances (altitudes or depths) are measured.",
  "example": "../examples/verticalDatum.json",
  "translation": {
    "ISO 19115-2": [
      "referenceSystemInfo > MD_CRS > datum"
    ],
    "FGDC CSDGM": [
      "metadata > spref > vertdef",
      "metadata > spref > depthsys"
    ]
  },
  "required": [
    "datumIdentifier"
  ],
  "additionalProperties": true,
  "properties": {
    "datumIdentifier": {
      "description": "The identification given to the surface taken as the surface of reference from which altitudes or depths are measured.",
      "translation": {
        "ISO 19115-2": [
          "referenceSystemInfo > MD_CRS > datum > RS_Identifier > code"
        ],
        "FGDC CSDGM": [
          "metadata > spref > vertdef > altsys > altdatum",
          "metadata > spref > vertdef > depthsys > depthdn"
        ]
      },
      "$ref": "./identifier.json#"
    },
    "encodingMethod": {
      "type": "string",
      "description": "The means used to encode the altitudes.",
      "translation": {
        "FGDC CSDGM": [
          "metadata > spref > vertdef > altsys > altenc",
          "metadata > spref > vertdef > depthsys > depthem"
        ]
      }
    },
    "isDepthSystem": {
      "type": "boolean",
      "description": "True if depth system, false if altitude system.",
      "default": false
    },
    "verticalResolution": {
      "type": "number",
      "description": "The minimum distance possible between two adjacent altitude or depth values, expressed in units of measure.",
      "translation": {
        "FGDC CSDGM": [
          "metadata > spref > vertdef > altsys > altres",
          "metadata > spref > vertdef > depthsys > depthres"
        ]
      }
    },
    "unitOfMeasure": {
      "type": "string",
      "description": "The units of measure for altitude or depth measurements.",
      "translation": {
        "FGDC CSDGM": [
          "metadata > spref > vertdef > altsys > altunits",
          "metadata > spref > vertdef > depthsys > depthdu"
        ]
      }
    }
  },
  "dependencies": {
    "encodingMethod": [
      "isDepthSystem",
      "verticalResolution",
      "unitOfMeasure",
      "datumIdentifier"
    ],
    "isDepthSystem": [
      "encodingMethod",
      "verticalResolution",
      "unitOfMeasure",
      "datumIdentifier"
    ],
    "verticalResolution": [
      "isDepthSystem",
      "encodingMethod",
      "unitOfMeasure",
      "datumIdentifier"
    ],
    "unitOfMeasure": [
      "isDepthSystem",
      "verticalResolution",
      "encodingMethod",
      "datumIdentifier"
    ]
  }
}