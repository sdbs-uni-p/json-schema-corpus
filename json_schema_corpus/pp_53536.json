{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "asset",
  "description": "Root asset, that will used as base",
  "type": "object",
  "required": [
    "package",
    "id",
    "version",
    "main",
    "name",
    "description",
    "author",
    "license"
  ],
  "definitions": {
    "address": {
      "type": "object"
    }
  },
  "properties": {
    "package": {
      "type": "string",
      "pattern": "^asset"
    },
    "main": {
      "$ref": "test.json#/definitions/address"
    },
    "id": {
      "description": "The unique identifier for a product",
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]{3,128}$"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "name": {
      "description": "Name of the asset",
      "type": "string",
      "maxLength": 256,
      "minLength": 5
    },
    "description": {
      "type": "string"
    },
    "scripts": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]{4,128}$": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "author": {
      "type": "string"
    },
    "license": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "additionalProperties": false
}