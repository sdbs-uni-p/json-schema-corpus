{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "tsd-v4-dev-5",
  "description": "TSD - TypeScript Definition Manager: config & data file",
  "type": "object",
  "required": [
    "version",
    "repo",
    "ref",
    "path"
  ],
  "properties": {
    "version": {
      "description": "config-format version",
      "type": "string",
      "pattern": "^v[\\d]+$"
    },
    "path": {
      "description": "path to definition directory",
      "type": "string",
      "minLength": 1
    },
    "repo": {
      "description": "github repository \"owner/name\"",
      "type": "string",
      "pattern": "^[\\w\\.-]+/[\\w\\.-]+$"
    },
    "ref": {
      "description": "git index ref (branch/commit)",
      "type": "string",
      "pattern": "^[\\w\\.-]+(?:\\/[\\w\\.-]+)*$"
    },
    "cache": {
      "description": "path to (shared) tsd-cache",
      "type": "string",
      "minLength": 1
    },
    "bundle": {
      "description": "path to <reference /> bundle",
      "type": "string",
      "pattern": "\\w+\\.ts$"
    },
    "stats": {
      "description": "enable stats tracking",
      "type": "boolean"
    },
    "installed": {
      "description": "index of installed definitions",
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[\\w\\.-]+\\/[\\w\\.-]+\\.d\\.ts$": {
          "type": "object",
          "required": [
            "commit"
          ],
          "properties": {
            "commit": {
              "description": "sha1 hex",
              "type": "string",
              "pattern": "^[0-9a-f]{6,40}$"
            }
          }
        }
      }
    }
  }
}