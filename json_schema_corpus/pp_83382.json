{
  "$schema": "http://json-schema.org/draft-03/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "text_field": {
      "type": "string",
      "required": true
    },
    "date_range": {
      "type": "object",
      "properties": {
        "start_date": {
          "type": "string",
          "format": "date-time"
        },
        "end_date": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false,
      "required": true
    },
    "single_date": {
      "type": "string",
      "format": "date-time",
      "required": true
    },
    "dates": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "date-time"
      },
      "uniqueItems": true
    },
    "integers": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0,
        "exclusiveMinimum": true
      }
    }
  },
  "definitions": {
    "positiveInteger": {
      "type": "integer",
      "minimum": 0,
      "exclusiveMinimum": true
    }
  }
}