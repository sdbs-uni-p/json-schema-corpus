{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "resource_id": {
    "type": "string",
    "maxLength": 128,
    "pattern": "^[a-z0-9_\\-]+(\\.[\\w\\-]+)*$"
  },
  "resource": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "cells": {
        "type": "array",
        "items": {
          "$ref": "common.json#/cell"
        }
      },
      "pattern": {
        "type": "string"
      },
      "endpoint": {
        "$ref": "common.json#/endpoint"
      }
    }
  }
}