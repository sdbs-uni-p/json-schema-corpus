{
  "id": "#detailsAlgorithmSchema",
  "$schema": "http://json-schema.org/schema#",
  "description": "schema for an algorithm details view entry",
  "definitions": {
    "nonuser": {
      "type": "object",
      "required": [
        "userdefined"
      ],
      "properties": {
        "userdefined": {
          "type": "boolean"
        }
      }
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 25
    },
    "highlighter": {
      "enum": [
        "polygon",
        "rectangle",
        "circle",
        "line"
      ]
    },
    "description": {
      "type": "string",
      "minLength": 3,
      "maxLength": 255
    },
    "number": {
      "type": "object",
      "required": [
        "name",
        "options"
      ],
      "properties": {
        "name": {
          "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/name"
        },
        "description": {
          "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/description"
        },
        "options": {
          "type": "object",
          "required": [
            "required",
            "default"
          ],
          "properties": {
            "required": {
              "type": "boolean"
            },
            "default": {
              "type": "number"
            },
            "min": {
              "type": "number"
            },
            "max": {
              "type": "number"
            },
            "steps": {
              "type": "number"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "text": {
      "type": "object",
      "required": [
        "name",
        "options"
      ],
      "properties": {
        "name": {
          "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/name"
        },
        "description": {
          "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/description"
        },
        "options": {
          "type": "object",
          "required": [
            "required",
            "default"
          ],
          "properties": {
            "required": {
              "type": "boolean"
            },
            "default": {
              "type": "string"
            },
            "min": {
              "type": "number"
            },
            "max": {
              "type": "number"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "inputFile": {
      "type": "object",
      "required": [
        "name",
        "options"
      ],
      "properties": {
        "name": {
          "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/name"
        },
        "description": {
          "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/description"
        },
        "options": {
          "type": "object",
          "required": [
            "required"
          ],
          "properties": {
            "required": {
              "type": "boolean"
            },
            "default": {
              "type": "string"
            }
          }
        }
      }
    },
    "json": {
      "type": "object",
      "required": [
        "name",
        "options"
      ],
      "properties": {
        "name": {
          "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/name"
        },
        "description": {
          "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/description"
        },
        "options": {
          "type": "object",
          "required": [
            "required"
          ],
          "properties": {
            "required": {
              "type": "boolean"
            },
            "default": {
              "type": "string"
            },
            "json-schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "select": {
      "type": "object",
      "required": [
        "name",
        "options"
      ],
      "properties": {
        "name": {
          "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/name"
        },
        "description": {
          "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/description"
        },
        "options": {
          "type": "object",
          "required": [
            "required",
            "values",
            "default"
          ],
          "properties": {
            "required": {
              "type": "boolean"
            },
            "values": {
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "type": "string"
              },
              "additionalItems": false
            },
            "default": {
              "type": "number"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "checkbox": {
      "type": "object",
      "required": [
        "name",
        "options"
      ],
      "properties": {
        "name": {
          "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/name"
        },
        "description": {
          "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/description"
        },
        "options": {
          "type": "object",
          "required": [
            "required",
            "default"
          ],
          "properties": {
            "required": {
              "type": "boolean"
            },
            "default": {
              "type": "number"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "type": "object",
  "required": [
    "general",
    "input"
  ],
  "properties": {
    "general": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 2,
          "maxLength": 50
        },
        "description": {
          "type": "string",
          "minLength": 5
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "author": {
          "type": "string",
          "minLenght": 5,
          "maxLength": 250
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "website": {
          "type": "string",
          "format": "uri"
        },
        "DOI": {
          "type": "string"
        },
        "exptectedRuntime": {
          "type": "string"
        },
        "purpose": {
          "type": "string"
        },
        "license": {
          "type": "string"
        }
      }
    },
    "input": {
      "type": "array",
      "items": {
        "description": "Input types",
        "type": "object",
        "properties": {
          "highlighter": {
            "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/highlighter"
          },
          "number": {
            "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/number"
          },
          "text": {
            "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/text"
          },
          "select": {
            "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/select"
          },
          "checkbox": {
            "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/checkbox"
          },
          "inputImage": {
            "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/nonuser"
          },
          "outputFolder": {
            "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/nonuser"
          },
          "inputFileExtension": {
            "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/nonuser"
          },
          "resultFile": {
            "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/nonuser"
          },
          "outputImage": {
            "$ref": "http://134.21.72.48:8080/schemas/details#/definitions/nonuser"
          }
        },
        "additionalProperties": false
      },
      "additionalItems": false
    }
  },
  "additionalProperties": true
}