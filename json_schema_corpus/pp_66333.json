{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "required": true,
      "minLength": 1
    },
    "version": {
      "type": "string",
      "required": true,
      "minLength": 1
    },
    "style": {
      "type": "string",
      "minLength": 1
    },
    "icons": {
      "type": "string",
      "minLength": 1
    },
    "resolution": {
      "type": "object",
      "required": true,
      "properties": {
        "width": {
          "required": true,
          "type": "number"
        },
        "height": {
          "required": true,
          "type": "number"
        }
      }
    },
    "image": {
      "type": "string",
      "minLength": 1
    },
    "modules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "required": true,
            "minLength": 1
          },
          "x": {
            "type": "number",
            "required": true
          },
          "y": {
            "type": "number",
            "required": true
          },
          "size": {
            "type": "number",
            "required": true
          },
          "actions": {
            "type": "array",
            "required": true,
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "on": {
                  "$ref": "#state"
                },
                "click": {
                  "$ref": "#state"
                }
              }
            }
          }
        }
      }
    }
  },
  "state": {
    "type": "object",
    "properties": {
      "event": {
        "required": true,
        "type": "array",
        "minItems": 1,
        "maxItems": 3,
        "items": {
          "type": "string",
          "minLength": 1
        }
      },
      "type": {
        "type": "string",
        "enum": [
          "default",
          "primary",
          "success",
          "info",
          "warning",
          "danger",
          "transparent"
        ]
      },
      "icon": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}