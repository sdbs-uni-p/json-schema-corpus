{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "resource_id": {
    "type": "string",
    "maxLength": 60,
    "pattern": "^[a-zA-Z0-9_]+(\\.[a-zA-Z0-9\\-_^#]+)+$"
  },
  "resource": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "cells": {
        "type": "array",
        "items": {
          "$ref": "file://treadmill/etc/schema/common.json#/cell"
        },
        "minItems": 1
      },
      "pattern": {
        "type": "string"
      },
      "types": {
        "type": "array",
        "items": {
          "enum": [
            "host",
            "internode"
          ]
        },
        "minItems": 1
      },
      "identity-group": {
        "$ref": "common.json#/identity_group_id"
      },
      "alias": {
        "$ref": "common.json#/dns_alias"
      }
    }
  },
  "verbs": {
    "create": {
      "required": [
        "cells",
        "pattern",
        "types",
        "identity-group",
        "alias"
      ]
    },
    "update": {
      "required": []
    }
  }
}