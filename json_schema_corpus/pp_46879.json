        },
        "billing_address": {
          "required": true,
          "extends": "types.json#/address"
        },
        "shipping_address": {
          "required": false,
          "extends": "types.json#/address"
        },
        "risk_params": {
          "required": false,
          "extends": "types.json#/risk_params_birthday_only"
        },
        "meta": {
          "required": false,
          "extends": "types.json#/meta"
        },
        "recurring_schedule": {
          "required": false,
          "extends": "types.json#/recurring_schedule"
