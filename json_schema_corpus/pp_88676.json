{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "/response.json",
  "description": "Shampoo response specification",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "pattern": "response"
    },
    "status": {
      "description": "Status code, using the same codes as HTTP.",
      "type": "integer",
      "minimum": 100
    },
    "message": {
      "description": "Human readable status message.",
      "type": "string"
    },
    "response_data": {
      "description": "Response data from the called method",
      "type": "object"
    },
    "request_id": {
      "description": "The request_id of the request this is a response to.",
      "type": "integer",
      "minimum": 0
    }
  },
  "required": [
    "type",
    "status",
    "message",
    "response_data",
    "request_id"
  ]
}