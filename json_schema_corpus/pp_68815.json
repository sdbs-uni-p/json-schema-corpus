{
  "$schema": "http://json-schema.org/schema#",
  "title": "State",
  "description": "Current state of host",
  "type": "object",
  "required": [
    "context",
    "plugins"
  ],
  "properties": {
    "context": {
      "description": "Context",
      "type": "object",
      "properties": {
        "data": {
          "description": "Data of context",
          "type": "object"
        },
        "children": {
          "description": "Instances",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Instance"
          }
        }
      }
    },
    "plugins": {
      "description": "Collection of plug-ins",
      "type": "array",
      "items": {
        "$ref": "#/definitions/Plugin"
      }
    }
  },
  "definitions": {
    "Instance": {
      "type": "object",
      "required": [
        "name",
        "data"
      ],
      "properties": {
        "name": {
          "description": "Name of instance",
          "type": "string"
        },
        "data": {
          "type": "object",
          "required": [
            "family"
          ],
          "properties": {
            "family": {
              "description": "Family of instance",
              "type": "string"
            },
            "compatibleInstances": {
              "description": "Array of compatible plug-ins",
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "Plugin": {
      "type": "object",
      "required": [
        "name",
        "data"
      ],
      "properties": {
        "name": {
          "description": "",
          "type": "string"
        },
        "data": {
          "type": "object",
          "required": [
            "families"
          ],
          "properties": {
            "families": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "order": {
              "type": "number"
            },
            "version": {
              "type": "array",
              "minItems": 3,
              "maxItems": 3,
              "items": {
                "type": "integer"
              }
            },
            "optional": {
              "type": "boolean"
            },
            "doc": {
              "type": [
                "string",
                "null"
              ]
            },
            "hasRepair": {
              "type": "boolean"
            },
            "hasCompatible": {
              "type": "boolean"
            },
            "type": {
              "type": "string"
            },
            "module": {
              "type": "string"
            },
            "canProcessContext": {
              "description": "Whether or not the plug-in has implemented Context processing",
              "type": "boolean"
            },
            "canProcessInstance": {
              "description": "Whether or not the plug-in has implemented Instance processing",
              "type": "boolean"
            },
            "canRepairInstance": {
              "description": "Whether or not the plug-in has implemented Instance repair",
              "type": "boolean"
            },
            "canRepairContext": {
              "description": "Whether or not the plug-in has implemented Instance repair",
              "type": "boolean"
            },
            "compatibleInstances": {
              "description": "Array of compatible instances",
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}