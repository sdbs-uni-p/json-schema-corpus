{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "condition": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "entries": {
            "type": "array",
            "items": {
              "$ref": "/Entry"
            }
          },
          "source": {
            "type": "string"
          },
          "page": {
            "type": "integer"
          }
        },
        "required": [
          "name",
          "entries",
          "source",
          "page"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "condition"
  ],
  "additionalProperties": false
}