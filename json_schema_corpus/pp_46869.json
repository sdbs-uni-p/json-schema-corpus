{
  "description": "Hypercharge ideal_sale Transaction request",
  "type": "object",
  "$schema": "http://json-schema.org/draft-03/schema",
  "additionalProperties": false,
  "properties": {
    "payment_transaction": {
      "type": "object",
      "required": true,
      "additionalProperties": false,
      "properties": {
        "transaction_type": {
          "description": "Type of the Transaction => static 'ideal_sale'",
          "required": true,
          "type": "string",
          "pattern": "^ideal_sale$"
        },
        "transaction_id": {
          "required": false,
          "extends": "types.json#/transaction_id"
        },
        "usage": {
          "required": false,
          "extends": "types.json#/usage"
        },
        "remote_ip": {
          "required": true,
          "extends": "types.json#/ipv4"
        },
        "amount": {
          "required": true,
          "extends": "types.json#/amount"
        },
        "currency": {
          "required": true,
          "extends": "types.json#/currency"
        },
        "customer_email": {
          "required": true,
          "extends": "types.json#/customer_email"
        },
        "customer_phone": {
          "required": false,
          "extends": "types.json#/customer_phone"
        },
        "billing_address": {
          "required": true,
          "extends": "types.json#/address"
        },
        "shipping_address": {
          "required": false,
          "extends": "types.json#/address"
        },
        "risk_params": {
          "required": false,
          "extends": "types.json#/risk_params"
        },
        "meta": {
          "required": false,
          "extends": "types.json#/meta"
        },
        "bank_account_holder": {
          "required": true,
          "extends": "types.json#/bank_account_holder"
        },
        "bank_name": {
          "required": false,
          "extends": "types.json#/bank_name"
        },
        "bank_account_number": {
          "required": false,
          "extends": "types.json#/bank_account_number"
        },
        "bank_number": {
          "required": false,
          "extends": "types.json#/bank_number"
        },
        "notification_url": {
          "required": true,
          "extends": "types.json#/url"
        },
        "return_success_url": {
          "required": true,
          "extends": "types.json#/url"
        },
        "return_failure_url": {
          "required": true,
          "extends": "types.json#/url"
        }
      }
    }
  }
}