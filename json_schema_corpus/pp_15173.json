{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.1.3",
  "type": "object",
  "definitions": {
    "backgroundData": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "page": {
          "type": "integer"
        },
        "skillProficiencies": {
          "$ref": "util.json#/definitions/skillProficiencies"
        },
        "toolProficiencies": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "artisan's tools": {
                "type": "boolean"
              },
              "cartographer's tools": {
                "type": "boolean"
              },
              "disguise kit": {
                "type": "boolean"
              },
              "forgery kit": {
                "type": "boolean"
              },
              "gaming set": {
                "type": "boolean"
              },
              "herbalism kit": {
                "type": "boolean"
              },
              "musical instrument": {
                "type": "boolean"
              },
              "navigator's tools": {
                "type": "boolean"
              },
              "thieves' tools": {
                "type": "boolean"
              },
              "vehicles (land)": {
                "type": "boolean"
              },
              "vehicles (water)": {
                "type": "boolean"
              },
              "any": {
                "type": "integer"
              },
              "choose": {
                "type": "object",
                "properties": {
                  "from": {
                    "type": "array",
                    "items": {
                      "enum": [
                        "artisan's tools",
                        "cartographer's tools",
                        "disguise kit",
                        "forgery kit",
                        "gaming set",
                        "herbalism kit",
                        "musical instrument",
                        "navigator's tools",
                        "thieves' tools",
                        "vehicles (land)",
                        "vehicles (water)",
                        "alchemist's supplies"
                      ]
                    }
                  },
                  "count": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "languageProficiencies": {
          "$ref": "util.json#/definitions/languageProficiencies"
        },
        "entries": {
          "type": "array",
          "items": {
            "$ref": "entry.json"
          }
        },
        "additionalSources": {
          "$ref": "util.json#/definitions/additionalSources"
        },
        "srd": {
          "$ref": "util.json#/definitions/srd"
        },
        "otherSources": {
          "$ref": "util.json#/definitions/otherSources"
        }
      },
      "additionalProperties": false
    },
    "background": {
      "anyOf": [
        {
          "type": "object",
          "$$merge": [
            {
              "$ref": "#/definitions/backgroundData"
            },
            {
              "required": [
                "name",
                "source",
                "skillProficiencies",
                "entries"
              ]
            }
          ]
        },
        {
          "type": "object",
          "$$merge": [
            {
              "$ref": "#/definitions/backgroundData"
            },
            {
              "$ref": "util.json#/definitions/copyBlock"
            }
          ]
        }
      ]
    }
  },
  "properties": {
    "background": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "$ref": "#/definitions/background"
      }
    },
    "_meta": {
      "$ref": "util.json#/definitions/metaBlock"
    }
  },
  "required": [
    "background"
  ],
  "additionalProperties": false
}