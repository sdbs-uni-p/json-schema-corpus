    "doc_type": {
      "type": "string",
      "pattern": "^facilityRound$"
    },
    "version": {
      "type": "string",
      "format": "semver"
    },
    "orderID": {
      "type": "string"
    },
    "facility": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "note": {
      "type": "string"
    },
    "deliveryPeriod": {
      "type": "string"
    },
    "departedAt": {
      "type": "string",
      "format": "date-time"
    },
    "arrivedAt": {
      "type": "string",
