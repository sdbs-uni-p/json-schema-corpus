{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "verbosity": {
      "type": "number",
      "minimum": 0,
      "maximum": 5
    },
    "timeout": {
      "type": "number",
      "minimum": 0
    },
    "flow": {
      "type": "boolean"
    },
    "strictness": {
      "type": "boolean"
    },
    "args": {
      "type": "array",
      "items": {
        "type": [
          "string",
          "number"
        ]
      }
    },
    "dialogue": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "output",
              "input"
            ]
          },
          "name": {
            "type": "string"
          },
          "value": {
            "type": "string"
          },
          "strictness": {
            "type": "boolean"
          }
        },
        "required": [
          "type",
          "name",
          "value"
        ]
      }
    },
    "log": {
      "type": "object",
      "properties": {
        "quotes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "object",
                "properties": {
                  "en": {
                    "type": "string",
                    "enum": [
                      "output",
                      "input",
                      "printing"
                    ]
                  },
                  "he": {
                    "type": "string",
                    "enum": [
                      "\u05e4\u05dc\u05d8",
                      "\u05e7\u05dc\u05d8",
                      "\u05d4\u05d3\u05e4\u05e1\u05d4"
                    ]
                  }
                },
                "required": [
                  "en",
                  "he"
                ]
              },
              "name": {
                "type": "string"
              },
              "value": {
                "type": [
                  "string",
                  "number"
                ]
              }
            },
            "required": [
              "type",
              "value"
            ]
          }
        },
        "text": {
          "type": "string"
        }
      },
      "required": [
        "quotes",
        "text"
      ]
    },
    "result": {
      "type": "object",
      "properties": {
        "bool": {
          "type": "boolean"
        },
        "text": {
          "type": "string",
          "enum": [
            "\u05d4\u05e6\u05dc\u05d7\u05d4",
            "\u05d0\u05d9-\u05d4\u05e6\u05dc\u05d7\u05d4"
          ]
        }
      },
      "required": [
        "bool",
        "text"
      ]
    },
    "feedback": {
      "type": "object",
      "properties": {
        "type": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "text": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "exit_code": {
      "oneOf": [
        {
          "type": "number",
          "minimum": 0,
          "maximum": 255
        },
        {
          "type": "null"
        }
      ]
    },
    "signal_code": {
      "oneOf": [
        {
          "type": "number",
          "minimum": 1,
          "maximum": 30
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "required": [
    "id",
    "name",
    "description",
    "timeout",
    "verbosity",
    "flow",
    "strictness",
    "args",
    "dialogue",
    "log",
    "result",
    "feedback",
    "exit_code",
    "signal_code"
  ]
}