{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "verbosity": {
      "type": "number",
      "minimum": 0,
      "maximum": 5
    },
    "timeout": {
      "type": "number",
      "minimum": 0
    },
    "flow": {
      "type": "boolean"
    },
    "strictness": {
      "type": "boolean"
    },
    "args": {
      "type": "array",
      "items": {
        "type": [
          "string",
          "number"
        ]
      }
    },
    "dialogue": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "output",
              "input"
            ]
          },
          "name": {
            "type": "string"
          },
          "value": {
            "type": "string"
          },
          "strictness": {
            "type": "boolean"
          }
        },
        "required": [
          "type",
          "name",
          "value"
        ]
      }
    }
  },
  "required": [
    "id",
    "name",
    "description",
    "timeout",
    "verbosity",
    "flow",
    "strictness",
    "args",
    "dialogue"
  ]
}