{
  "description": "Hypercharge refund Transaction request",
  "type": "object",
  "$schema": "http://json-schema.org/draft-03/schema",
  "required": true,
  "additionalProperties": false,
  "properties": {
    "payment_transaction": {
      "type": "object",
      "required": true,
      "additionalProperties": false,
      "properties": {
        "transaction_type": {
          "description": "Type of the Transaction => static 'refund'",
          "required": true,
          "type": "string",
          "pattern": "^refund$"
        },
        "transaction_id": {
          "required": false,
          "extends": "types.json#/transaction_id"
        },
        "usage": {
          "required": false,
          "extends": "types.json#/usage"
        },
        "reference_id": {
          "required": true,
          "extends": "types.json#/reference_id"
        },
        "amount": {
          "required": true,
          "extends": "types.json#/amount"
        },
        "currency": {
          "required": true,
          "extends": "types.json#/currency"
        },
        "meta": {
          "required": false,
          "extends": "types.json#/meta"
        }
      }
    }
  }
}