{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "required": [
    "cipher",
    "cipherparams",
    "ciphertext"
  ],
  "properties": {
    "cipher": {
      "type": "string",
      "enum": [
        "aes-128-ctr"
      ]
    },
    "cipherparams": {
      "type": "object",
      "required": [
        "iv"
      ],
      "additionalProperties": false,
      "properties": {
        "iv": {
          "type": "string",
          "pattern": "^([0-9]|[a-f]){32}$"
        }
      }
    },
    "ciphertext": {
      "type": "string",
      "pattern": "^(([0-9]|[a-f]){2}){0,32}$"
    }
  }
}