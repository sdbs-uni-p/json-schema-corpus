{
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "http://schema.dcos/acl/users/user/permissions",
  "title": "DCOS ACL: Groups a user is member of",
  "definitions": {
    "acl-resource": {
      "type": "object",
      "properties": {
        "rid": {
          "title": "ACL's ID",
          "type": "string"
        },
        "description": {
          "title": "ACL's description",
          "type": "string"
        },
        "aclurl": {
          "title": "ACL's URL",
          "type": "string"
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "direct": {
      "title": "Direct permissions given to a user",
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "#/definitions/acl-resource"
          },
          {
            "properties": {
              "actions": {
                "type": "array",
                "items": {
                  "allOf": [
                    {
                      "$ref": "http://schema.dcos/acl/action"
                    }
                  ]
                }
              }
            }
          }
        ]
      }
    },
    "groups": {
      "type": "array",
      "description": "List of resources user has permissions on because they are member of a group",
      "items": {
        "allOf": [
          {
            "$ref": "#/definitions/acl-resource"
          },
          {
            "properties": {
              "gid": {
                "title": "Group's ID",
                "type": "string"
              },
              "membershipurl": {
                "title": "Group's ID",
                "type": "string"
              },
              "actions": {
                "type": "array",
                "items": {
                  "allOf": [
                    {
                      "$ref": "http://schema.dcos/acl/action"
                    }
                  ]
                }
              }
            }
          }
        ]
      }
    }
  },
  "required": [
    "direct",
    "groups"
  ]
}