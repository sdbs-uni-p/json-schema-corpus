{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "CollectionIdType": {
      "type": "object",
      "properties": {
        "short-name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "required": [
        "short-name",
        "version"
      ]
    },
    "UpdateTypeEnum": {
      "type": "string",
      "enum": [
        "ADD_TO_EXISTING",
        "CLEAR_FIELD",
        "CLEAR_ALL_AND_REPLACE",
        "FIND_AND_REMOVE",
        "FIND_AND_REPLACE",
        "FIND_AND_UPDATE"
      ]
    },
    "UpdateFieldEnum": {
      "type": "string",
      "enum": [
        "SCIENCE_KEYWORDS",
        "LOCATION_KEYWORDS",
        "DATA_CENTERS",
        "PLATFORMS",
        "INSTRUMENTS"
      ]
    }
  },
  "title": "Ingest Bulk Update",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "concept-ids": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "collection-ids": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/CollectionIdType"
      },
      "minItems": 1
    },
    "update-type": {
      "$ref": "#/definitions/UpdateTypeEnum"
    },
    "update-field": {
      "$ref": "#/definitions/UpdateFieldEnum"
    },
    "update-value": {
      "type": "object"
    },
    "find-value": {
      "type": "object"
    }
  },
  "required": [
    "update-type",
    "update-field",
    "concept-ids"
  ]
}