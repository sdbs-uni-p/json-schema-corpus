{
  "id": "api-box json schema - reference",
  "$schema": "http://json-schema.org/schema#",
  "description": "api-box input json schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "prefix": {
      "type": "string"
    },
    "endpoints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "methods": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "method": {
                  "enum": [
                    "GET",
                    "POST",
                    "PUT",
                    "DELETE"
                  ]
                },
                "content_type": {
                  "type": "string"
                },
                "input": {
                  "type": "object"
                },
                "result": {
                  "anyOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "number"
                    },
                    {
                      "type": "boolean"
                    },
                    {
                      "type": "object"
                    },
                    {
                      "type": "array"
                    }
                  ]
                }
              },
              "required": [
                "method",
                "result"
              ]
            },
            "uniqueItems": true
          }
        },
        "required": [
          "path"
        ]
      },
      "uniqueItems": true
    },
    "global": {
      "type": "object"
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "endpoints"
  ],
  "definitions": {}
}