{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "LoginForm",
  "description": "LoginForm from Tiamat",
  "type": "object",
  "$async": true,
  "properties": {
    "email": {
      "type": "string",
      "format": "email",
      "minLength": 4,
      "maxLength": 30,
      "emailExists": true
    },
    "password": {
      "type": "string",
      "minLength": 4,
      "maxLength": 50
    }
  },
  "required": [
    "email",
    "password"
  ]
}