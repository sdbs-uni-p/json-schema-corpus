{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://fiware.github.io/dataModels/Weather/weather-schema.json",
  "title": "GSMA / FIWARE - Weather base schema",
  "description": "Common definitions of weather data models",
  "definitions": {
    "Weather-AirConditions": {
      "type": "object",
      "properties": {
        "temperature": {
          "type": [
            "number",
            "null"
          ]
        },
        "feelLikesTemperature": {
          "type": [
            "number",
            "null"
          ]
        },
        "relativeHumidity": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "Weather-Commons": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/Weather-AirConditions"
        },
        {
          "properties": {
            "weatherType": {
              "type": "string"
            },
            "visibility": {
              "type": "string",
              "enum": [
                "veryPoor",
                "poor",
                "moderate",
                "good",
                "veryGood",
                "excellent"
              ]
            },
            "windDirection": {
              "type": [
                "integer",
                "null"
              ],
              "minimum": -180,
              "maximum": 180
            },
            "windSpeed": {
              "type": [
                "number",
                "null"
              ],
              "minimum": 0
            },
            "refPointOfInterest": {
              "type": "string"
            }
          }
        }
      ]
    }
  }
}