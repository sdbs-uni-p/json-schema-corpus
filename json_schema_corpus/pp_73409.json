{
  "$id": "person",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "description": "A Person from Acme's catalog",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Id"
    },
    "firstName": {
      "type": "string",
      "description": "First Name"
    },
    "lastName": {
      "type": "string",
      "description": "Last Name"
    },
    "age": {
      "description": "Age in years",
      "type": "integer",
      "minimum": 0
    }
  },
  "required": [
    "id",
    "firstName",
    "lastName"
  ],
  "localized": [
    "firstName",
    "lastName"
  ],
  "ids": [
    "id"
  ]
}