{
  "$schema": "http://json-schema.org/schema#",
  "description": "The schema is made for RenderTheFuck timeline diagram.",
  "type": "object",
  "required": [
    "wtf",
    "settings",
    "lines"
  ],
  "properties": {
    "wtf": {
      "type": "string",
      "enum": [
        "timeline"
      ]
    },
    "settings": {
      "type": "object",
      "required": [
        "title",
        "unit"
      ],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "unit": {
          "type": "string",
          "enum": [
            "year"
          ]
        }
      }
    },
    "lines": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "title",
          "from",
          "to"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "from": {
            "type": "number"
          },
          "to": {
            "type": "number"
          },
          "wiki": {
            "type": "string"
          }
        }
      }
    }
  }
}