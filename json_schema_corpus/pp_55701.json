{
  "id": "http://sport-archive.com/input-schema/mainConfig#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Schemas for main config file",
  "type": "object",
  "properties": {
    "aws": {
      "description": "Contains AWS credentials",
      "type": "object",
      "properties": {
        "region": {
          "type": "string"
        },
        "key": {
          "type": "string"
        },
        "secret": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "activities": {
      "type": "array",
      "items": {
        "$ref": "config/activities.json"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "clients": {
      "type": "array",
      "items": {
        "$ref": "client.json"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": [
    "activities",
    "clients"
  ],
  "additionalProperties": false
}