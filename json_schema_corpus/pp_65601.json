{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "string",
  "description": "This schema describes local time in a 24-hour clock format (with optional milliseconds).",
  "references": [
    {
      "description": "Reference RFC 3339 5.6 for details.",
      "url": "http://tools.ietf.org/html/rfc3339#section-5.6"
    }
  ],
  "pattern": "^([01]\\d|2[0-3]):[0-5]\\d:([0-5]\\d|60)(.\\d{1,3})?$"
}