{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "HypertyDataObjectInstance",
  "type": "object",
  "required": [
    "owner",
    "resources",
    "name",
    "runtime"
  ],
  "anyOf": [
    {
      "$ref": "#/HypertyContextDataObjectInstance"
    },
    {
      "$ref": "#/HypertyCommunicationDataObjectInstance"
    }
  ],
  "properties": {
    "owner": {
      "type": "string"
    },
    "resources": {
      "type": "array",
      "items": {
        "enum": [
          "chat",
          "audio",
          "video",
          "av",
          "screen",
          "file",
          "midi",
          "activity_context",
          "availability_context",
          "location_context",
          "heart_rate_contexst",
          "user_steps_context",
          "battery_context",
          "sleep_context",
          "light_context",
          "humidity_context",
          "power",
          "user_activity_context",
          "user_communication_context"
        ]
      }
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "runtime": {
    "type": "string"
  },
  "p2pRequester": {
    "type": "string"
  },
  "HypertyCommunicationDataObjectInstance": {
    "type": "object",
    "required": [
      "url"
    ],
    "properties": {
      "url": {
        "type": "string"
      }
    }
  },
  "HypertyContextDataObjectInstance": {
    "type": "object",
    "required": [
      "url"
    ],
    "properties": {
      "url": {
        "type": "string"
      }
    }
  }
}