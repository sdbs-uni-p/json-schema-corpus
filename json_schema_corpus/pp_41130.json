{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://flynn.io/schema/examples/base#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "request",
    "response"
  ],
  "properties": {
    "request": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "method",
        "url",
        "headers"
      ],
      "properties": {
        "method": {
          "type": "string",
          "enum": [
            "GET",
            "POST",
            "PUT",
            "DELETE"
          ]
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "headers": {
          "type": "object"
        },
        "params": {
          "type": "object"
        },
        "body": {
          "type": "any"
        }
      }
    },
    "response": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "headers": {
          "type": "object"
        },
        "body": {
          "type": "any"
        }
      }
    }
  }
}