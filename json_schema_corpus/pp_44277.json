{
  "id": "hotspot-transform-scale",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "HotspotTransformScaleConfig",
  "description": "An instance of <a href='#hotspot-transform-scale'>a hotspot transform scale.</a>",
  "type": "object",
  "properties": {
    "x": {
      "type": "number",
      "title": "X",
      "description": "Scale on x.",
      "default": 1,
      "example": 8
    },
    "y": {
      "type": "number",
      "title": "Y",
      "description": "Scale on y.",
      "default": 1,
      "example": 3
    },
    "z": {
      "type": "number",
      "title": "Z",
      "description": "Scale on z.",
      "default": 1,
      "example": 5
    }
  }
}