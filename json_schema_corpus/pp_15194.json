{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.4.1",
  "definitions": {
    "itemLookup": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "abbreviation": {
            "type": "string"
          },
          "source": {
            "type": "string"
          },
          "page": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "entries": {
            "type": "array",
            "items": {
              "$ref": "entry.json"
            }
          },
          "template": {
            "$comment": "Note that this is not used on item types.",
            "type": "string"
          }
        },
        "required": [
          "abbreviation",
          "source",
          "page"
        ],
        "additionalProperties": false
      }
    }
  },
  "type": "object",
  "properties": {
    "baseitem": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "rarity": {
            "type": "string",
            "description": "\"None\" is for mundane items. \"Unknown (Magic)\" is for miscellaneous magical items. \"Unknown\" is for miscellaneous mundane items.",
            "enum": [
              "rare",
              "none",
              "uncommon",
              "very rare",
              "legendary",
              "artifact",
              "unknown",
              "common",
              "unknown (magic)"
            ]
          },
          "source": {
            "type": "string"
          },
          "page": {
            "type": "integer"
          },
          "ac": {
            "type": "integer"
          },
          "age": {
            "type": "string"
          },
          "armor": {
            "description": "Flag used when merging generic variants",
            "type": "boolean"
          },
          "axe": {
            "type": "boolean"
          },
          "dmg1": {
            "type": "string"
          },
          "dmg2": {
            "type": "string"
          },
          "dmgType": {
            "type": "string"
          },
          "entries": {
            "type": "array",
            "items": {
              "$ref": "entry.json"
            }
          },
          "property": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "T",
                "V",
                "H",
                "2H",
                "F",
                "L",
                "R",
                "A",
                "LD",
                "S",
                "AF",
                "RLD",
                "BF"
              ]
            }
          },
          "range": {
            "type": "string"
          },
          "reload": {
            "type": "integer"
          },
          "scfType": {
            "type": "string"
          },
          "stealth": {
            "type": "boolean"
          },
          "strength": {
            "type": "string"
          },
          "sword": {
            "type": "boolean"
          },
          "firearm": {
            "type": "boolean"
          },
          "staff": {
            "description": "Adds the italicized \"Staff\" text to the item info line (below the name).",
            "type": "boolean"
          },
          "value": {
            "description": "In copper pieces.",
            "type": "number"
          },
          "currencyConversion": {
            "description": "ID of a value conversion table. Homebrew only.",
            "type": "string"
          },
          "valueMult": {
            "type": "number"
          },
          "weapon": {
            "type": "boolean"
          },
          "weaponCategory": {
            "type": "string"
          },
          "weight": {
            "type": "number"
          },
          "weightMult": {
            "type": "number"
          },
          "quantity": {
            "type": "integer"
          },
          "srd": {
            "$ref": "util.json#/definitions/srd"
          },
          "otherSources": {
            "$ref": "util.json#/definitions/otherSources"
          },
          "ammoType": {
            "type": "string"
          },
          "packContents": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object",
                  "properties": {
                    "special": {
                      "type": "string"
                    },
                    "quantity": {
                      "type": "integer"
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "special"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "item": {
                      "type": "string"
                    },
                    "quantity": {
                      "type": "integer"
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "item",
                    "quantity"
                  ]
                }
              ]
            }
          }
        },
        "required": [
          "name",
          "type",
          "rarity",
          "source",
          "page"
        ],
        "additionalProperties": false
      }
    },
    "itemProperty": {
      "$ref": "#/definitions/itemLookup"
    },
    "itemType": {
      "$ref": "#/definitions/itemLookup"
    },
    "itemTypeAdditionalEntries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "appliesTo": {
            "type": "string"
          },
          "entries": {
            "type": "array",
            "items": {
              "$ref": "entry.json"
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}