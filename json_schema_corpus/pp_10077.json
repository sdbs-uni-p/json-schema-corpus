{
  "$schema": "http://json-schema.org/schema#",
  "title": "DBSettings",
  "type": "object",
  "properties": {
    "settings": {
      "properties": {
        "port": {
          "type": "integer",
          "default": 27017
        },
        "host": {
          "type": "string",
          "default": "localhost"
        },
        "secret": {
          "type": "string",
          "minlength": 20
        }
      },
      "required": [
        "host",
        "port",
        "secret"
      ]
    }
  },
  "required": [
    "settings"
  ]
}