{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Translation",
  "type": "object",
  "properties": {
    "id": {
      "type": "number"
    },
    "translator": {
      "title": "Translation author",
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "nickname": {
          "type": "string"
        },
        "avatar": {
          "type": "string|null"
        },
        "created_at": {
          "type": "date-time"
        },
        "updated_at": {
          "type": "date-time"
        }
      },
      "required": [
        "id",
        "nickname",
        "created_at",
        "updated_at"
      ]
    },
    "body": {
      "type": "string"
    },
    "rating": {
      "type": "number"
    },
    "rates": {
      "title": "List of translation rates",
      "type": "object",
      "properties": {
        "data": {
          "type": "array"
        }
      },
      "required": [
        "data"
      ]
    },
    "created_at": {
      "type": "date-time"
    },
    "updated_at": {
      "type": "date-time"
    }
  },
  "required": [
    "id",
    "translator",
    "body",
    "rating",
    "rates",
    "created_at",
    "updated_at"
  ]
}