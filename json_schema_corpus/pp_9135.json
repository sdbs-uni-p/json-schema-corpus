{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Docker Encapsulated Environment",
  "id": "docker_enc_environment",
  "additionalProperties": false,
  "properties": {
    "environment_type": {
      "type": "string",
      "enum": [
        "docker-encapsulated"
      ],
      "default": "docker-encapsulated"
    },
    "image": {
      "type": "string",
      "title": "Image"
    },
    "imagetag": {
      "type": "string",
      "title": "Tag",
      "default": "latest"
    },
    "resources": {
      "type": "array",
      "title": "Resources",
      "default": []
    },
    "envscript": {
      "type": "string",
      "title": "Env Script",
      "default": ""
    },
    "env": {
      "type": "object",
      "title": "Env Vars",
      "properties": {},
      "default": {}
    }
  },
  "required": [
    "environment_type",
    "image"
  ]
}