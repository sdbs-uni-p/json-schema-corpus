{
  "gear": {
    "name": "scitran-nifti-montage",
    "label": "SciTran: NIfTI Montage Creation Tool",
    "description": "Creates a montage (zip, or png) from a NIfTI file.",
    "maintainer": "Michael Perry <lmperry@stanford.edu>",
    "author": "SciTran Team",
    "url": "https://github.com/scitran-apps/nifti-montage",
    "source": "https://github.com/scitran-apps/nifti-montage",
    "license": "Apache-2.0",
    "flywheel": "0",
    "version": "1.2",
    "custom": {
      "docker-image": "scitran/nifti-montage:v1.2"
    },
    "config": {
      "voxel_order": {
        "description": "str [default 'LPS'] Three character string indicating the voxel order.",
        "default": "LPS",
        "type": "string"
      },
      "tile_size": {
        "description": "int [default 256] Tile size for generated zip or directory pyramid (has no affect when montage_type='png').",
        "default": 256,
        "type": "integer"
      },
      "montage_type": {
        "description": "str [default 'zip'] Type of montage to create. can be 'zip', or 'png'.",
        "default": "zip",
        "type": "string"
      }
    },
    "inputs": {
      "nifti": {
        "description": "NIfTI file",
        "base": "file",
        "type": {
          "enum": [
            "nifti"
          ]
        }
      }
    }
  },
  "exchange": {
    "git-commit": "7f56aba4a127135de0b8bd0bfdf6c0dd9e612042",
    "rootfs-hash": "sha384:6bbb720470febb6cb9388c9a1ce4f9444c53f95f04d9a0d47bd35e1535ead3f4726e9c59f8038018976e071dfa7888e9",
    "rootfs-url": "https://storage.googleapis.com/flywheel-exchange/scitran-nifti-montage-sha384-6bbb720470febb6cb9388c9a1ce4f9444c53f95f04d9a0d47bd35e1535ead3f4726e9c59f8038018976e071dfa7888e9.tgz"
  },
  "invocation-schema": {
    "$schema": "http://json-schema.org/draft-04/schema#",
    "required": [
      "config",
      "inputs"
    ],
    "type": "object",
    "properties": {
      "inputs": {
        "required": [
          "nifti"
        ],
        "type": "object",
        "properties": {
          "nifti": {
            "type": "object",
            "properties": {
              "type": {
                "enum": [
                  "nifti"
                ]
              }
            }
          }
        }
      },
      "config": {
        "required": [
          "tile_size",
          "voxel_order",
          "montage_type"
        ],
        "type": "object",
        "properties": {
          "tile_size": {
            "default": 256,
            "type": "integer"
          },
          "voxel_order": {
            "default": "LPS",
            "type": "string"
          },
          "montage_type": {
            "default": "zip",
            "type": "string"
          }
        }
      }
    },
    "title": "Invocation manifest for SciTran: NIfTI Montage Creation Tool"
  }
