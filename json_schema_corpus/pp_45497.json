{
  "id": "http://schema.management.azure.com/schemas/2015-04-15/uiDefinition.json#semVer",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "SemVer",
  "description": "Semantic version number",
  "type": "string",
  "pattern": "^((0|([1-9][0-9]*))\\.){2}(0|([1-9][0-9]*))(-([-0-9A-Za-z]+\\.)*([-0-9A-Za-z]+))?(\\+([0-9A-Za-z]+\\.)*([0-9A-Za-z]+))?$"
}