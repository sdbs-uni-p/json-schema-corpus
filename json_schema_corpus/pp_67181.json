  "properties": {
    "jobTemplate": {
      "$ref": "../JobTemplate.json"
    },
    "triggers": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "../trigger/SimpleTrigger.json"
          },
          {
            "$ref": "../trigger/CronTrigger.json"
          },
          {
            "$ref": "../trigger/NowTrigger.json"
          }
        ]
      }
    }
  },
  "required": [
