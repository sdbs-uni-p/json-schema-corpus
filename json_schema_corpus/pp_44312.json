{
  "id": "view",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "ViewConfig",
  "description": "An instance of <a href=\"#view\">the view configuration.</a>",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "Rectilinear",
        "GoPro",
        "Flat"
      ],
      "title": "The type of view",
      "description": "Two views are available: <ul><li>Rectilinear</li><li>GoPro</li><li>Flat</li></ul>",
      "default": "Rectilinear"
    },
    "options": {
      "$ref": "view-options"
    }
  }
}