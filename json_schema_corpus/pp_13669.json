{
  "description": "An article or thesis or book or...",
  "title": "Publication",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "$schema",
    "abstracts",
    "authors",
    "copyright",
    "dois",
    "imprints",
    "license",
    "publication_info",
    "titles"
  ],
  "properties": {
    "self": {
      "description": "Url of the record itself",
      "title": "Url of the record",
      "$ref": "http://repo.scoap3.org/schemas/json_reference.json"
    },
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "acquisition_source": {
      "type": "object",
      "title": "Origin of the metadata in the record",
      "properties": {
        "date": {
          "type": "string",
          "format": "date-time",
          "title": "Date on which the metadata was obtained"
        },
        "method": {
          "type": "string",
          "title": "How the medata was obtained"
        },
        "source": {
          "type": "string",
          "title": "Source of the information in this field."
        },
        "submission_number": {
          "type": "string"
        }
      }
    },
    "collaborations": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "value": {
            "description": ":MARC: ``710__g``\n\nCollaboration name as it appears on the paper",
            "minLength": 1,
            "title": "Collaboration name",
            "type": "string"
          }
        },
        "required": [
          "value"
        ],
        "type": "object"
      },
      "minItems": 1,
      "required": [
        "value"
      ],
      "title": "List of collaborations",
      "type": "array",
      "uniqueItems": true
    },
    "control_number": {
      "title": "ID of record",
      "type": "string"
    },
    "_oai": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        }
      }
    },
    "record_creation_date": {
      "type": "string",
      "format": "date-time"
    },
    "_files": {
      "title": "File schema",
      "type": "array",
      "properties": {
        "key": {
          "minLength": 1,
          "type": "string"
        },
        "checksum": {
          "minLength": 1,
          "type": "string"
        },
        "size": {
          "type": "integer"
        },
        "bucket": {
          "minLength": 1,
          "type": "string"
        },
        "version_id": {
          "minLength": 1,
          "type": "string"
        },
        "filetype": {
          "minLength": 1,
          "type": "string"
        }
      }
    },
    "abstracts": {
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "source": {
            "enum": [
              "arXiv",
              "AIP",
              "APS",
              "Annual Reviews",
              "Astronomical Society of the Pacific",
              "Author",
              "Bulgarian Academy of Sciences",
              "CERN",
              "CERN/SLAC",
              "Cambridge University Press",
              "Canadian Center of Science and Education",
              "DESY",
              "DESY/SLAC",
              "EDP Sciences",
              "ELSEVIER",
              "Education and Upbringing",
              "Elsevier",
              "European Astronomical Society",
              "HEPDATA",
              "HINDAWI",
              "Hindawi Publishing Corporation",
              "Hindawi",
              "IEEE",
              "INDICO",
              "INSPIRE",
              "IOP",
              "Institute of Physics Publishing/Chinese Academy of Sciences",
              "Institute of Physics Publishing/Deutsche Physikalische Gesellschaft",
              "Institute of Physics Publishing/SISSA",
              "IOS Press",
              "IPAP",
              "Indian National Science Academy",
              "International Press",
              "International Society for Optics and Photonics",
              "Internet Academy",
              "JACoW",
              "Jagiellonian University",
              "Kharkov Institute of Physics and Technology",
              "MDPI",
              "MPI Grav. Phys., Potsdam",
              "NRC Research Press",
              "National Academy of Sciences of Armenia",
              "Niscair",
              "Oxford Journals",
              "OUP",
              "Oxford University Press",
              "Oxford University Press/Physical Society of Japan",
              "Physical Society of Japan",
              "Polish Physical Society",
              "Publisher",
              "Royal Society",
              "SIGMA",
              "Springer",
              "Springer/SISSA",
              "Springer/SIF",
              "Springer/Societ\u00c3  Italiana di Fisica",
              "Springer/Societ\u00e0 Italiana di Fisica",
              "Springer/Societ\\xc3\\xa0 Italiana di Fisica",
              "Tomsk State Pedagogical University",
              "T\u00dcB\u0130TAK",
              "WILEY",
              "WS",
              "WSP",
              "World Scientific"
            ],
            "type": "string",
            "description": "FIXME: is there an enumerable list of sources?"
          },
          "value": {
            "type": "string"
          }
        }
      },
      "type": "array"
    },
    "imprints": {
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "publisher": {
            "type": "string"
          },
          "place": {
            "type": "string"
          }
        }
      },
      "type": "array"
    },
    "titles": {
      "$ref": "http://repo.scoap3.org/schemas/elements/titles.json"
    },
    "publication_info": {
      "uniqueItems": true,
      "required": [
        "journal_title",
        "year"
      ],
      "items": {
        "type": "object",
        "properties": {
          "journal_title": {
            "type": "string"
          },
          "pubinfo_freetext": {
            "type": "string"
          },
          "journal_volume": {
            "type": "string"
          },
          "cnum": {
            "type": "array"
          },
          "note": {
            "type": "string"
          },
          "parent_record": {
            "$ref": "http://repo.scoap3.org/schemas/json_reference.json",
            "description": "URI for the parent this record is part of"
          },
          "journal_record": {
            "$ref": "http://repo.scoap3.org/schemas/json_reference.json",
            "description": "URI for corresponding Journal"
          },
          "conference_record": {
            "$ref": "http://repo.scoap3.org/schemas/json_reference.json",
            "description": "URI for corresponding Conference"
          },
          "reportnumber": {
            "type": "string"
          },
          "year": {
            "minimum": 1000,
            "type": "integer",
            "maximum": 2050
          },
          "curated_relation": {
            "type": "boolean"
          },
          "journal_issue": {
            "type": "string"
          },
          "page_artid": {
            "type": "string",
            "description": "FIXME: for ejournals this could be the page index, but there is no realiable way to know whether something is a page index or a first page, does it?"
          },
          "conf_acronym": {
            "type": "string"
          },
          "confpaper_info": {
            "type": "string"
          },
          "isbn": {
            "type": "string"
          },
          "material": {
            "type": "string"
          }
        }
      },
      "type": "array"
    },
    "references": {
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "publisher": {
            "type": "array"
          },
          "doi": {
            "pattern": "(10\\.\\d+(\\.\\d+)?/.+)|(\\w+\\:\\d+\\/\\d+)",
            "type": "string"
          },
          "isbn": {
            "type": "string",
            "format": "isbn"
          },
          "texkey": {
            "type": "string"
          },
          "report_number": {
            "type": "array"
          },
          "url": {
            "type": "array",
            "format": "url"
          },
          "collaboration": {
            "type": "array"
          },
          "title": {
            "type": "array"
          },
          "misc": {
            "type": "array"
          },
          "editors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "number": {
            "type": "integer"
          },
          "curated_relation": {
            "type": "boolean"
          },
          "maintitle": {
            "type": "string"
          },
          "raw_reference": {
            "type": "array"
          },
          "year": {
            "type": "integer"
          },
          "authors": {
            "type": "array"
          },
          "journal_pubnote": {
            "pattern": ".*,.*,.*",
            "type": "array"
          },
          "record": {
            "$ref": "http://repo.scoap3.org/schemas/json_reference.json"
          }
        }
      },
      "type": "array"
    },
    "copyright": {
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "url"
          },
          "material": {
            "type": "string"
          },
          "holder": {
            "type": "string",
            "description": "Copyright holder."
          },
          "statement": {
            "type": "string",
            "description": "Copyright statement."
          }
        }
      },
      "type": "array"
    },
    "field_categories": {
      "$ref": "http://repo.scoap3.org/schemas/elements/fields.json"
    },
    "accelerator_experiments": {
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "curated_relation": {
            "default": false,
            "type": "boolean",
            "description": "Was the experiment actually proofchecked by a cataloguer?"
          },
          "experiment": {
            "type": "string"
          },
          "facets_experiment": {
            "type": "string",
            "description": "Experiment name to be used on facets."
          },
          "accelerator": {
            "type": "string"
          },
          "institution": {
            "type": "string"
          },
          "record": {
            "description": "URI for the corresponding experiment record.",
            "$ref": "http://repo.scoap3.org/schemas/json_reference.json"
          }
        }
      },
      "type": "array"
    },
    "arxiv_eprints": {
      "uniqueItems": true,
      "items": {
        "properties": {
          "value": {
            "type": "string",
            "pattern": "\\d{4}.\\d{4,5}|\\w+-\\w+/\\d+|\\w+/\\d+"
          },
          "categories": {
            "items": {
              "type": "string"
            },
            "type": "array"
          }
        }
      },
      "type": "array"
    },
    "title_variations": {
      "$ref": "http://repo.scoap3.org/schemas/elements/titles.json"
    },
    "free_keywords": {
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "source": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      },
      "type": "array"
    },
    "refextract": {
      "items": {
        "type": "object",
        "properties": {
          "comment": {
            "type": "string"
          },
          "time": {
            "type": "string"
          },
          "version": {
            "type": "array"
          },
          "source": {
            "type": "string"
          }
        }
      },
      "description": "Technical information from a refextract run",
      "type": "array"
    },
    "oai_pmh": {
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "previous_set": {
            "type": "string"
          }
        },
        "description": "Local OAI-PMH information"
      },
      "type": "array"
    },
    "succeeding_entry": {
      "items": {
        "type": "object",
        "properties": {
          "relationship_code": {
            "type": "string"
          },
          "isbn": {
            "type": "string"
          },
          "record": {
            "$ref": "http://repo.scoap3.org/schemas/json_reference.json"
          }
        },
        "description": "Reference to previously merged records."
      }
    },
    "collaboration": {
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "value": {
            "type": "string"
          },
          "record": {
            "$ref": "http://repo.scoap3.org/schemas/json_reference.json"
          }
        }
      },
      "type": "array"
    },
    "authors": {
      "uniqueItems": false,
      "items": {
        "type": "object",
        "properties": {
          "other_ids": {
            "items": {
              "type": "object",
              "properties": {
                "source": {
                  "type": "string",
                  "title": "Source of ID"
                },
                "value": {
                  "type": "string",
                  "title": "ID"
                }
              },
              "title": "ID"
            },
            "type": "array",
            "description": "Just in case...",
            "title": "Other IDs"
          },
          "uuid": {
            "title": "UUID",
            "description": "Universally unique identifier of the author.",
            "type": "string",
            "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
          },
          "full_name": {
            "title": "Author name",
            "type": "string",
            "description": "author name as it appears in the paper",
            "format": ".+, .+"
          },
          "alternative_name": {
            "title": "Alternative author name",
            "type": "string",
            "description": "FIXME: needed for import only",
            "format": ".+, .+"
          },
          "name_variations": {
            "title": "Author name variations",
            "type": "string",
            "description": "All possible variations of the authors full name."
          },
          "affiliations": {
            "uniqueItems": true,
            "items": {
              "type": "object",
              "properties": {
                "curated_relation": {
                  "type": "boolean",
                  "description": "Did a cataloguer proof-checked the recid?",
                  "title": "The affiliation is curated?"
                },
                "value": {
                  "type": "string",
                  "description": "The affiliation as it appears on the paper",
                  "title": "Name of institution"
                },
                "country": {
                  "type": "string",
                  "description": "Te country of affiliation",
                  "title": "Country"
                },
                "record": {
                  "description": "URI for the Institution collection record",
                  "title": "URI for the Institution collection record",
                  "$ref": "http://repo.scoap3.org/schemas/json_reference.json"
                }
              },
              "title": "Affiliation"
            },
            "type": "array",
            "title": "Affiliations"
          },
          "inspire_id": {
            "pattern": "INSPIRE-\\d+",
            "type": "string",
            "description": "Legacy INSPIRE ID when available",
            "title": "INSPIRE ID"
          },
          "inspire_bai": {
            "pattern": "(\\w+\\.)+\\d+",
            "type": "string",
            "description": "INSPIRE BAI when available",
            "title": "INSPIRE BibAuthorID"
          },
          "curated_relation": {
            "default": false,
            "type": "boolean",
            "description": "Was this signature actually claimed or proof-checked by cataloguer?",
            "title": "The relation is curated?"
          },
          "orcid": {
            "pattern": "\\d{4}-\\d{4}-\\d{4}-\\d{3}[\\dX]",
            "title": "ORCID ID",
            "type": "string",
            "description": "ORCID Id when available",
            "format": "orcid"
          },
          "role": {
            "enum": [
              "",
              "ed.",
              "Technical Associate"
            ],
            "type": "string",
            "description": "Role of the author within the paper. So far only Editor was captured.",
            "title": "Role of the person"
          },
          "email": {
            "title": "Email",
            "type": "string",
            "format": "email"
          },
          "signature_block": {
            "title": "Phonetic name",
            "description": "Phonetic notation of the author's name.",
            "type": "string"
          },
          "record": {
            "description": "URI for the person record",
            "title": "URI for the person record",
            "$ref": "http://repo.scoap3.org/schemas/json_reference.json"
          }
        },
        "title": "Author"
      },
      "type": "array",
      "description": "List with all the authors",
      "title": "Authors"
    },
    "classification_number": {
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "value": {
            "type": "string",
            "description": "PACS or PDG codes. FIXME: What about better separating these into a PACS field and a PDG field?",
            "title": "Number"
          },
          "standard": {
            "enum": [
              "PACS",
              "PDG"
            ],
            "type": "string",
            "title": "Standard"
          },
          "source": {
            "type": "string",
            "title": "Source"
          }
        },
        "title": "Classification number"
      },
      "type": "array",
      "title": "Classification numbers"
    },
    "dois": {
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": [
          "value"
        ],
        "properties": {
          "source": {
            "type": [
              "string",
              "null"
            ],
            "description": "Issuing of DOI. FIXME: should we have an enum",
            "title": "DOI registrant"
          },
          "value": {
            "pattern": "10\\.\\d+(\\.\\d+)?/.+",
            "type": "string",
            "title": "DOI"
          }
        },
        "title": "DOI"
      },
      "type": "array",
      "title": "DOIs"
    },
    "document_type": {
      "minItems": 1,
      "items": {
        "enum": [
          "Published",
          "arXiv",
          "ConferencePaper",
          "Thesis",
          "Review",
          "Lectures",
          "Note",
          "Proceedings",
          "Introductory",
          "Book",
          "BookChapter",
          "Report"
        ],
        "type": "string"
      },
      "uniqueItems": true,
      "type": "array",
      "title": "Document type"
    },
    "collections": {
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "primary": {
            "type": "string"
          }
        }
      },
      "uniqueItems": true,
      "type": "array",
      "title": "Collection"
    },
    "deleted_records": {
      "type": "array",
      "items": {
        "$ref": "http://repo.scoap3.org/schemas/json_reference.json"
      },
      "description": "List of deleted records referring to this record",
      "title": "Deleted Records"
    },
    "new_record": {
      "$ref": "http://repo.scoap3.org/schemas/json_reference.json",
      "description": "Master record that replaces this record",
      "title": "New record"
    },
    "license": {
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "imposing": {
            "type": "string",
            "description": "FIXME: what is this!?",
            "title": "Imposing"
          },
          "url": {
            "title": "URL of the license",
            "type": "string",
            "format": "url"
          },
          "material": {
            "type": "string",
            "title": "Material referred by the license"
          },
          "license": {
            "type": "string",
            "title": "License name"
          }
        },
        "title": "License"
      },
      "type": "array",
      "title": "License information"
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "FIXME: we shall provide the ISO enum",
        "title": "Language"
      }
    },
    "page_nr": {
      "type": "array",
      "items": {
        "type": "integer",
        "title": "Number of pages"
      }
    },
    "urls": {
      "$ref": "http://repo.scoap3.org/schemas/elements/urls.json"
    },
    "title_translations": {
      "$ref": "http://repo.scoap3.org/schemas/elements/titles.json"
    },
    "corporate_author": {
      "uniqueItems": true,
      "items": {
        "type": "string",
        "title": "Corporate author"
      },
      "type": "array",
      "title": "Corporate authors"
    },
    "external_system_numbers": {
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "institute": {
            "type": "string",
            "title": "Institute"
          },
          "obsolete": {
            "type": "boolean",
            "title": "Obsolete?"
          },
          "value": {
            "type": "string",
            "title": "Number"
          }
        },
        "title": "External system number"
      },
      "type": "array",
      "title": "External system numbers"
    },
    "persistent_identifiers": {
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "source": {
            "type": "string",
            "description": "Provenance of the persistent identifier"
          },
          "type": {
            "type": "string",
            "title": "Type of persistent identifier"
          },
          "value": {
            "type": "string",
            "title": "Value of the persistent identifier"
          }
        },
        "title": "Persistent Identifier"
      },
      "type": "array",
      "title": "Persistent Identifiers"
    }
  }
}