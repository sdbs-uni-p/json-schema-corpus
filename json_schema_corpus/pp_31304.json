{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "MADF 3.0",
  "id": "/",
  "type": "object",
  "definitions": {
    "units": {
      "enum": [
        "pct",
        "g/g",
        "ppm",
        "ppb",
        "ppt",
        "ppq",
        "Bq",
        "Bq/kg",
        "Bq/unit",
        "Bq/m",
        "Bq/cm",
        "Bq/m2",
        "Bq/cm2",
        "Bq/m3",
        "Bq/cm3",
        "mBq",
        "mBq/kg",
        "mBq/unit",
        "mBq/m",
        "mBq/cm",
        "mBq/m2",
        "mBq/cm2",
        "mBq/m3",
        "mBq/cm3",
        "uBq",
        "uBq/kg",
        "uBq/unit",
        "uBq/m",
        "uBq/cm",
        "uBq/m2",
        "uBq/cm2",
        "uBq/m3",
        "uBq/cm3",
        "nBq",
        "nBq/kg",
        "nBq/unit",
        "nBq/m",
        "nBq/cm",
        "nBq/m2",
        "nBq/cm2",
        "nBq/m3",
        "nBq/cm3",
        "pBq",
        "pBq/kg",
        "pBq/unit",
        "pBq/m",
        "pBq/cm",
        "pBq/m2",
        "pBq/cm2",
        "pBq/m3",
        "pBq/cm3",
        "g",
        "g/kg",
        "g/unit",
        "g/m",
        "g/cm",
        "g/m2",
        "g/cm2",
        "g/m3",
        "g/cm3",
        "mg",
        "mg/kg",
        "mg/unit",
        "mg/m",
        "mg/cm",
        "mg/m2",
        "mg/cm2",
        "mg/m3",
        "mg/cm3",
        "ug",
        "ug/kg",
        "ug/unit",
        "ug/m",
        "ug/cm",
        "ug/m2",
        "ug/cm2",
        "ug/m3",
        "ug/cm3",
        "ng",
        "ng/kg",
        "ng/unit",
        "ng/m",
        "ng/cm",
        "ng/m2",
        "ng/cm2",
        "ng/m3",
        "ng/cm3",
        "pg",
        "pg/kg",
        "pg/unit",
        "pg/m",
        "pg/cm",
        "pg/m2",
        "pg/cm2",
        "pg/m3",
        "pg/cm3"
      ]
    },
    "contact": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "contact": {
          "type": "string"
        }
      }
    },
    "result_measurement": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "measurement"
          ]
        },
        "isotope": {
          "type": "string"
        },
        "unit": {
          "$ref": "#/definitions/units"
        },
        "value": {
          "type": "array",
          "minItems": 1,
          "maxItems": 3,
          "items": {
            "type": "number"
          }
        }
      },
      "required": [
        "type",
        "isotope",
        "unit",
        "value"
      ]
    },
    "result_range": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "range"
          ]
        },
        "isotope": {
          "type": "string"
        },
        "unit": {
          "$ref": "#/definitions/units"
        },
        "value": {
          "type": "array",
          "minItems": 1,
          "maxItems": 3,
          "items": {
            "type": "number"
          }
        }
      },
      "required": [
        "type",
        "isotope",
        "unit",
        "value"
      ]
    },
    "result_limit": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "limit"
          ]
        },
        "isotope": {
          "type": "string"
        },
        "unit": {
          "$ref": "#/definitions/units"
        },
        "value": {
          "type": "array",
          "minItems": 1,
          "maxItems": 2,
          "items": {
            "type": "number"
          }
        }
      },
      "required": [
        "type",
        "isotope",
        "unit",
        "value"
      ]
    },
    "user": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "value": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            }
          ]
        },
        "unit": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "type"
      ]
    }
  },
  "properties": {
    "specification": {
      "type": "string"
    },
    "grouping": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "measurement": {
      "type": "object",
      "properties": {
        "requestor": {
          "$ref": "#/definitions/contact"
        },
        "practitioner": {
          "$ref": "#/definitions/contact"
        },
        "technique": {
          "type": "string"
        },
        "institution": {
          "type": "string"
        },
        "date": {
          "type": "array",
          "minItems": 0,
          "maxItems": 2,
          "items": {
            "anyOf": [
              {
                "type": "string",
                "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}"
              },
              {
                "type": "string",
                "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{1}"
              },
              {
                "type": "string",
                "pattern": "[0-9]{4}-[1-2]{1}-[0-9]{2}"
              },
              {
                "type": "string",
                "pattern": "[0-9]{4}-[1-2]{1}-[0-9]{1}"
              },
              {
                "type": "string",
                "pattern": "[0-9]{4}-[0-9]{2}"
              },
              {
                "type": "string",
                "pattern": "[0-9]{4}-[0-9]{1}"
              },
              {
                "type": "string",
                "pattern": "[0-9]{4}"
              },
              {
                "type": "string",
                "pattern": "^$"
              }
            ]
          }
        },
        "results": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/result_measurement"
              },
              {
                "$ref": "#/definitions/result_range"
              },
              {
                "$ref": "#/definitions/result_limit"
              }
            ]
          }
        },
        "user": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/user"
          }
        }
      }
    },
    "sample": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "owner": {
          "$ref": "#/definitions/contact"
        },
        "user": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/user"
          }
        }
      },
      "required": [
        "name",
        "description"
      ]
    },
    "data_source": {
      "type": "object",
      "properties": {
        "input": {
          "type": "object",
          "properties": {
            "date": {
              "type": "string",
              "anyOf": [
                {
                  "type": "string",
                  "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}"
                },
                {
                  "type": "string",
                  "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{1}"
                },
                {
                  "type": "string",
                  "pattern": "[0-9]{4}-[1-2]{1}-[0-9]{2}"
                },
                {
                  "type": "string",
                  "pattern": "[0-9]{4}-[1-2]{1}-[0-9]{1}"
                },
                {
                  "type": "string",
                  "pattern": "[0-9]{4}-[0-9]{2}"
                },
                {
                  "type": "string",
                  "pattern": "[0-9]{4}-[0-9]{1}"
                },
                {
                  "type": "string",
                  "pattern": "[0-9]{4}"
                }
              ]
            },
            "name": {
              "type": "string"
            },
            "contact": {
              "type": "string"
            }
          },
          "required": [
            "name",
            "contact",
            "date"
          ]
        },
        "reference": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        },
        "user": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/user"
          }
        }
      }
    }
  },
  "required": [
    "grouping",
    "specification",
    "type",
    "sample",
    "data_source",
    "measurement"
  ]
}