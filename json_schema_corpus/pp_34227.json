{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://d-pac.be/schemas/selectionpayload.json",
  "name": "selectionpayload",
  "title": "Selection payload",
  "type": "object",
  "properties": {
    "representations": {
      "title": "Representation list",
      "type": "array",
      "uniqueItems": true,
      "minItems": 2,
      "items": {
        "$ref": "#representation"
      }
    },
    "comparisons": {
      "title": "Comparisons list",
      "type": "array",
      "uniqueItems": true,
      "minItems": 0,
      "items": {
        "$ref": "#comparison"
      }
    },
    "assessment": {
      "$ref": "#assessment"
    },
    "assessor": {
      "type": "string"
    }
  },
  "required": true
}