{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "resource:/META-INF/schema/horse.json#",
  "type": "object",
  "title": "Horse",
  "description": "Jackson data binding is done on this project for now, this avoids requiring it in the core doxdb",
  "properties": {
    "name": {
      "type": "string"
    },
    "passport": {
      "type": "string"
    },
    "fei": {
      "type": "string"
    },
    "usef": {
      "type": "string"
    },
    "ec": {
      "type": "string"
    },
    "dateOfBirth": {
      "type": "string",
      "format": "date"
    },
    "countryOfBirth": {
      "$ref": "country.json#"
    },
    "gender": {
      "enum": [
        "mare",
        "gelding"
      ]
    },
    "color": {
      "type": "string"
    },
    "breed": {
      "type": "string"
    },
    "sire": {
      "type": "string"
    },
    "sireDam": {
      "type": "string"
    }
  },
  "required": [
    "name",
    "fei"
  ],
  "patternProperties": {
    "_[a-z]+": {
      "type": "string"
    }
  },
  "additionalProperties": false
}