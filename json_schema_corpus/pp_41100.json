{
  "id": "http://sportarchive.tv/input-schema/ValidateInputAsset#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Schema for ValidateInputAndAsset activity task",
  "type": "object",
  "properties": {
    "client": {
      "$ref": "client.json"
    },
    "time": {
      "description": "Timestamp of the command",
      "type": "number"
    },
    "job_id": {
      "description": "ID of the new job",
      "type": "string",
      "pattern": "^[0-9a-z]+$",
      "maxLength": 32,
      "minLength": 32
    },
    "type": {
      "description": "Type of message",
      "type": "string",
      "pattern": "^START_JOB$"
    },
    "data": {
      "description": "Data for the new validation job",
      "type": "object",
      "properties": {
        "workflow": {
          "type": "object",
          "$ref": "activities/Workflow.json"
        },
        "input_type": {
          "enum": [
            "VIDEO",
            "AUDIO",
            "IMG",
            "DOC"
          ],
          "description": "Type of the input file to transcode: VIDEO, AUDIO, DOC, IMG",
          "type": "string"
        },
        "input_bucket": {
          "description": "S3 bucket where the file is located",
          "type": "string",
          "pattern": "^[0-9a-zA-Z\\.\\-_]+$",
          "minLength": 3,
          "maxLength": 63
        },
        "input_file": {
          "description": "Path to the file to process",
          "type": "string",
          "pattern": "^[\\w /-]+\\.[0-9a-zA-Z]+$",
          "minLength": 1,
          "maxLength": 1024
        }
      },
      "required": [
        "workflow",
        "input_type",
        "input_bucket",
        "input_file"
      ],
      "additionalProperties": false
    },
    "required": [
      "type",
      "job_id",
      "time",
      "data"
    ],
    "additionalProperties": false
  }
}