{
  "$schema": "http://json-schema/org/schema#",
  "id": "f5schemadb://bigip-virtual-server_v0.1.0.json",
  "type": "object",
  "definitions": {
    "portType": {
      "type": "integer",
      "minimum": 1,
      "maximum": 65535
    },
    "virtualAddressType": {
      "type": "object",
      "properties": {
        "bindAddr": {
          "anyOf": [
            {
              "format": "ip-address"
            },
            {
              "format": "ipv6"
            }
          ]
        },
        "port": {
          "$ref": "#/definitions/portType"
        }
      },
      "additionalProperties": false,
      "required": [
        "bindAddr",
        "port"
      ]
    },
    "sslProfileType": {
      "type": "object",
      "properties": {
        "f5ProfileName": {
          "type": "string",
          "minLength": "1"
        }
      },
      "additionalProperties": false,
      "required": [
        "f5ProfileName"
      ]
    },
    "frontendVSType": {
      "type": "object",
      "properties": {
        "partition": {
          "type": "string",
          "minLength": 1
        },
        "mode": {
          "type": "string",
          "enum": [
            "tcp",
            "http"
          ]
        },
        "balance": {
          "type": "string",
          "enum": [
            "round-robin"
          ]
        },
        "sslProfile": {
          "$ref": "#/definitions/sslProfileType"
        },
        "virtualAddress": {
          "$ref": "#/definitions/virtualAddressType"
        }
      },
      "additionalProperties": false,
      "required": [
        "partition",
        "virtualAddress"
      ]
    },
    "frontendIAppType": {
      "type": "object",
      "properties": {
        "partition": {
          "type": "string",
          "minLength": 1
        },
        "iapp": {
          "type": "string",
          "minLength": 1
        },
        "iappTableName": {
          "type": "string",
          "minLength": 1
        },
        "iappOptions": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_-]+$": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        },
        "iappVariables": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_-]+$": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false,
      "required": [
        "partition",
        "iapp",
        "iappTableName",
        "iappOptions",
        "iappVariables"
      ]
    },
    "backendType": {
      "type": "object",
      "properties": {
        "serviceName": {
          "type": "string",
          "minLength": 1
        },
        "servicePort": {
          "$ref": "#/definitions/portType"
        }
      },
      "additionalProperties": false,
      "required": [
        "serviceName",
        "servicePort"
      ]
    }
  },
  "properties": {
    "virtualServer": {
      "type": "object",
      "properties": {
        "frontend": {
          "oneOf": [
            {
              "$ref": "#/definitions/frontendVSType"
            },
            {
              "$ref": "#/definitions/frontendIAppType"
            }
          ]
        },
        "backend": {
          "$ref": "#/definitions/backendType"
        }
      },
      "additionalProperties": false,
      "required": [
        "frontend",
        "backend"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "virtualServer"
  ]
}