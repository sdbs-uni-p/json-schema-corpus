{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://datatypes.io/schema/category.json",
  "title": "Category",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "title": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "title"
  ]
}