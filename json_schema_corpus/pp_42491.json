{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "mapping.json#",
  "type": "object",
  "properties": {
    "table": {
      "type": "string"
    },
    "query": {
      "type": "string"
    },
    "database": {
      "type": "string"
    },
    "collection": {
      "type": "string"
    },
    "nodes": {
      "type": "object",
      "patternProperties": {
        "^\\w+$": {
          "type": "object",
          "properties": {
            "label": {
              "type": "string"
            },
            "properties": {
              "$ref": "#/definitions/properties"
            }
          },
          "required": [
            "label",
            "properties"
          ]
        }
      },
      "minProperties": 1
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "source": {
            "type": "string"
          },
          "target": {
            "type": "string"
          },
          "properties": {
            "$ref": "#/definitions/properties"
          }
        },
        "required": [
          "label",
          "source",
          "target"
        ]
      }
    }
  },
  "required": [
    "database",
    "collection",
    "nodes"
  ],
  "definitions": {
    "properties": {
      "type": "object",
      "patternProperties": {
        "^\\w+$": {
          "type": "object",
          "properties": {
            "column": {
              "type": "string"
            },
            "format": {
              "type": "string"
            },
            "country": {
              "type": "string"
            },
            "literal": {},
            "transform": {
              "type": "string"
            },
            "transforms": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "nulls": {
              "type": "array"
            }
          }
        }
      },
      "minProperties": 1
    }
  }
}