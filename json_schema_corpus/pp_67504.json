{
  "type": "object",
  "title": "Profile schema",
  "$schema": "http://json-schema.org/draft-03/schema",
  "properties": {
    "id": {
      "required": false,
      "type": "id_field",
      "args": {
        "primary_key": true
      }
    },
    "created_at": {
      "required": false,
      "type": "datetime",
      "args": {
        "default": "{{datetime.datetime.utcnow}}"
      }
    },
    "updated_at": {
      "required": false,
      "type": "datetime",
      "args": {
        "onupdate": "{{datetime.datetime.utcnow}}"
      }
    },
    "address": {
      "required": false,
      "type": "unicode_text"
    },
    "user_id": {
      "required": false,
      "type": "foreign_key",
      "args": {
        "ref_document": "User",
        "ref_column": "user.username",
        "ref_column_type": "string"
      }
    }
  }
}