{
  "id": "https://schema.management.azure.com/schemas/2017-07-01-preview/CloudSimple.PrivateCloudIaaS.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "CloudSimple.PrivateCloudIaaS",
  "description": "cloudsimple privatecloudiaas Resource Types",
  "resourceDefinitions": {
    "virtualMachines": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "CloudSimple.PrivateCloudIaaS/virtualMachines"
          ]
        },
        "apiVersion": {
          "type": "string",
          "enum": [
            "2017-07-01-preview"
          ]
        },
        "id": {
          "type": "string",
          "description": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/{resourceProviderNamespace}/virtualMachines/{virtualMachineName}"
        },
        "location": {
          "type": "string",
          "description": "Azure region"
        },
        "properties": {
          "oneOf": [
            {
              "$ref": "#/definitions/VirtualMachineProperties"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "plan": {
          "oneOf": [
            {
              "$ref": "#/definitions/Plan"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "tags": {
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        }
      },
      "required": [
        "name",
        "type",
        "apiVersion",
        "location",
        "properties"
      ],
      "description": "CloudSimple.PrivateCloudIaaS/virtualMachines"
    }
  },
  "definitions": {
    "Plan": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "publisher": {
          "type": "string"
        },
        "product": {
          "type": "string"
        }
      },
      "description": "The purchase plan for CloudSimple resources"
    },
    "ResourcePool": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "resource pool id (privateCloudId:vsphereId)"
        },
        "location": {
          "type": "string",
          "description": "Azure region"
        },
        "properties": {
          "oneOf": [
            {
              "$ref": "#/definitions/ResourcePoolProperties"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        }
      },
      "required": [
        "id"
      ]
    },
    "ResourcePoolProperties": {},
    "VirtualDisk": {
      "type": "object",
      "properties": {
        "virtualDiskId": {
          "type": "string"
        },
        "totalSize": {
          "oneOf": [
            {
              "type": "integer"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "controllerId": {
          "type": "string"
        },
        "independenceMode": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "persistent",
                "independent_persistent",
                "independent_nonpersistent"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        }
      },
      "required": [
        "totalSize",
        "controllerId",
        "independenceMode"
      ]
    },
    "VirtualMachineProperties": {
      "type": "object",
      "properties": {
        "privateCloudId": {
          "type": "string"
        },
        "templateId": {
          "type": "string"
        },
        "numberOfCores": {
          "oneOf": [
            {
              "type": "integer"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "amountOfRam": {
          "oneOf": [
            {
              "type": "integer"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "guestOS": {
          "type": "string"
        },
        "guestOSType": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "linux",
                "windows",
                "other"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "disks": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/VirtualDisk"
              }
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "nics": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/VirtualNic"
              }
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "vSphereNetworks": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "resourcePool": {
          "oneOf": [
            {
              "$ref": "#/definitions/ResourcePool"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "exposeToGuestVM": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        }
      },
      "required": [
        "privateCloudId",
        "numberOfCores",
        "amountOfRam",
        "guestOS",
        "guestOSType",
        "templateId"
      ]
    },
    "VirtualNetwork": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "virtual network id (privateCloudId:vsphereId)"
        },
        "location": {
          "type": "string",
          "description": "Azure region"
        },
        "properties": {
          "oneOf": [
            {
              "$ref": "#/definitions/VirtualNetworkProperties"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        }
      },
      "required": [
        "id"
      ]
    },
    "VirtualNetworkProperties": {},
    "VirtualNic": {
      "type": "object",
      "properties": {
        "virtualNicId": {
          "type": "string"
        },
        "ipAddresses": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "macAddress": {
          "type": "string"
        },
        "nicType": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "E1000",
                "E1000E",
                "PCNET32",
                "VMXNET",
                "VMXNET2",
                "VMXNET3"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "powerOnBoot": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "network": {
          "oneOf": [
            {
              "$ref": "#/definitions/VirtualNetwork"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        }
      },
      "required": [
        "nicType"
      ]
    }
  }
}