{
  "id": "https://raw.githubusercontent.com/eviratec/schema/master/v1/contact/detail.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "schema for a contact detail",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "type",
    "content",
    "date_added"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "type": {
      "enum": [
        "email_address",
        "phone_number",
        "address"
      ]
    },
    "content": {
      "type": "string"
    },
    "date_added": {
      "type": "string",
      "format": "date-time"
    }
  }
}